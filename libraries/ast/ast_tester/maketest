#!/bin/tcsh

if( "$1" == "" ) then
   echo "Usage: maketest <test>"
   echo "   (e.g. maketest regions)"
   exit
endif

set a = "test$1"

echo "Building $a"
g95 -fno-second-underscore -w -g -o $a $a.f \
-L/star/lib -I/star/include `ast_link -ems` `chr_link` `err_link` `prm_link` `psx_link`

echo "Running $a"
$a

