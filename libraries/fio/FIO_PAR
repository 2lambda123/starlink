*  Global Constants:
      INTEGER FIO__SZFNM          ! Maximum size of full file name
      PARAMETER ( FIO__SZFNM = 200 )
      INTEGER FIO__SZMOD         ! Maximum size of access mode
      PARAMETER ( FIO__SZMOD = 15 )
      INTEGER FIO__SZBKT         ! Bucket size of the direct access file
      PARAMETER ( FIO__SZBKT = 11*512 )
                                 ! SI EAGLE tracksize = 55 blocks
                                 ! RP04,5,6 tracksize = 22 blocks
                                 ! RP07     tracksize = 50 blocks

