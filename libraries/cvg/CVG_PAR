*  Global Constants:


*  An illegal Fortran logical unit number.
      INTEGER CVG__NOLUN
      PARAMETER ( CVG__NOLUN = -999 )

*  Maximum length of a file path.
      INTEGER CVG__MXPTH
      PARAMETER ( CVG__MXPTH = 255 )

*  FITSIO success status value
      INTEGER CVG__FITSOK
      PARAMETER ( CVG__FITSOK = 0 )


*  Length of a FITS header card
      INTEGER CVG__HEDLEN
      PARAMETER ( CVG__HEDLEN = 80 )

