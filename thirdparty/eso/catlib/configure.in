AC_INIT(README)


# Starlink additions
PACKAGE=catlib
PACKAGE_VERSION=3.7.4
: ${STAR_MANIFEST_DIR='$(prefix)/manifests'}

AC_SUBST(PACKAGE)
AC_SUBST(PACKAGE_VERSION)
AC_SUBST(STAR_MANIFEST_DIR)



#--------------------------------------------------------------------
#	run configure scripts in these subdirectories, if available
#--------------------------------------------------------------------
AC_CONFIG_SUBDIRS(tclutil astrotcl rtd cat skycat)

# according to the docs, subdirs should be set to the directories
# found, however it doesn't seem to work.
dirs=""
for i in $subdirs ; do
	if test -d $i; then
		chmod +w $i
		chmod +w $i/config.*
	fi
	test -d $i && dirs="$dirs $i"
done
subdirs=$dirs
AC_SUBST(subdirs)

AC_OUTPUT(Makefile)
