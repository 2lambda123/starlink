#!/bin/sh
# E.S.O. - VLT project/ ESO Archive 
# "@(#) $Id: makelinks,v 1.1.1.1 2002/04/04 20:11:45 brighton Exp $"
#
# script to make some links used during development
#
# usage: makelinks
#
# who             when       what
# --------------  --------   ----------------------------------------
# Allan Brighton  22 Nov 97  Created


if [ ! -d ./tclcat/library ]
then
	echo "$0: you should be one level above the tclcat directory"
	exit 1
fi

echo "making links in cat/tclcat/library..."
cd tclcat/library
make index
for i in demos 
do
  rm -f $i
  ln -s ../$i .
done
