CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CXXDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
TCLUTIL_LIB     = @TCLUTIL_LIB_STATIC@
DEPEND_TARGET	= @DEPEND_TARGET@

SRCS 		=  tCompress.C

OBJS 		=  tCompress.o

PROGS 		=  tCompress

BUILD_INCLUDES  = @TCLUTIL_BUILD_INCLUDES@

INCLUDES	= -I../include \
		  $(BUILD_INCLUDES) \
		  -I$(TOPDIR)/include/tclutil

CC_SWITCHES	= $(CFLAGS) $(DEFINES) $(INCLUDES)

LIBRARIES       = ../lib/libcompress.a $(TCLUTIL_LIB)

DEPEND_FLAGS    = $(CC_SWITCHES) @CXX_INCLUDE@ @CXX_DEPEND_FLAGS@
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f
EXTRA_LIBS      = @LIBS@

all: 

test: $(PROGS)

lib:
	@cd ../src; $(MAKE)

All:
	cd ../..; $(MAKE); $(MAKE)

install:

clean: 
	$(RM) $(PROGS) $(OBJS) *.result *\~ "#"* *.o test.gzfits test.cfits test.hfits

distclean: clean
	echo > make.dep
	rm -f Makefile	

# accept all test results
allok:
	for i in *.result; do cp $$i `basename $$i .result`.ok; done

tCompress: tCompress.o $(LIBRARIES)
	$(CXX) $(CC_SWITCHES) -o $@ $@.o $(LIBRARIES) $(EXTRA_LIBS)	
	-$@ > $@.result
	-@if cmp $@.result $@.ok; \
	 then echo "$@: PASSED" ; \
	 else echo "*** $@: TEST FAILED: see $@.result"; \
	 fi

.SUFFIXES: .C
.c.o:
	$(CC) -c $(CC_SWITCHES) $<

.C.o:
	$(CXX) -c $(CC_SWITCHES) $<

man:

include @SRC_ROOT@/makefile.mk
include ../../depend.mk
