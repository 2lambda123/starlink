#     Foundation, Inc., 59 Temple Place,Suite 330, Boston, MA
#     02111-1307, USA

#  Authors:
#      TIMJ: Tim Jenness (JAC, Hawaii)
#     {enter_new_authors_here}

#  History:
#      08-MAR-2007 (TIMJ):
#         Add -star option
#     {enter_further_changes_here}

#-

#  Initialise linking options (default to non-Starlink)
      star='-lncar'

#  Interpret command line switches.
#  --------------------------------
      while :; do
         case "${1}" in

#  -star - Requests linking with Starlink extensions
#          This means we do not include the routines used by SNX
         -star)
            star="-lncar_snx"
            shift;;

#  Once all switches have been read, continue with the rest of the script.
         '') break;;

#  Catch unrecognised arguments and report an error.
         *)
            echo >&2 "ncar_link: unknown argument \""${1}"\" given"
            exit 1;;
         esac
      done


      echo $star `gks_link` \
           | awk 'BEGIN{RS=" ";FS="\n"}
                  {f[i++]=$1}
                  END{for(;i--;)if(!w[f[i]]++)l=f[i]" "l;print l}'

#  End of script.

