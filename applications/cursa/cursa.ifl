#+
#  Name:
#     CATGSCIN.IFL
#  Type of Module:
#     ADAM A-task parameter interface.
#
#  Authors:
#     ACD: A C Davenhall (Leicester)
#  History:
#     10/5/95 (ACD): Original version.
#     26/8/96 (ACD): Added parameter TEXT.
#     5/4/01  (ACD): Added quiet mode parameter QUIET.
#-

interface CATGSCIN

#   helplib '[help_library_specification]'

   parameter CATIN                   # Name of the input catalogue.
      position 1
      keyword  CATIN
      type     _CHAR
      access   READ
      prompt   'Input catalogue:'
      help     'Give the name of the input catalogue (a HST GSC region).'
   endparameter

   parameter TEXT                    # Copy textual information.
      position 2
      keyword  TEXT
      type     _CHAR
      access   READ
      default  'C'
      vpath    'DEFAULT'
      prompt   'Header text to copy?'
      help     'A - all,   C - comments (and history) only,   N - none.'
   endparameter

   parameter QUIET           # Flag: operate in a quiet mode?
      position 3
      keyword  QUIET
      type     _LOGICAL
      access   READ
      default  FALSE
      vpath    'GLOBAL,DEFAULT'
      ppath    'GLOBAL'
      association  '<->GLOBAL.CURSAQUIET'
      prompt   'Quiet mode?'
      help     'Operate in a quiet mode where warnings are suppressed.'
   endparameter

endinterface
#+
#  Name:
#     CATHEADER.IFL
#  Type of Module:
#     ADAM A-task parameter interface.
#
#  Authors:
#     ACD: A C Davenhall (Leicester)
#  History:
#     16/9/94 (ACD): Original version.
#     19/4/95 (ACD): First stable version.
#     25/6/99 (ACD): Added global access for catalogue names.
#     21/3/01 (ACD): Corrected global access for catalogue names.
#     5/4/01  (ACD): Added quiet mode parameter QUIET.
#     1/11/01 (ACD): Added parameters DETAIL, ROWS, COLS, PARS and NAMES.
#        Also made FILE hidden.
#-

interface CATHEADER

#   helplib '[help_library_specification]'

   parameter CATALOGUE       # Name of the catalogue.
      position 1
      keyword  CATALOGUE
      type     _CHAR
      access   READ
      vpath    'PROMPT'
      ppath    'GLOBAL'
      association  '<->GLOBAL.CURSACAT'
      prompt   'catalogue:'
      help     'Give the name of the catalogue.'
   endparameter

   parameter FILE            # Flag; write output to file?
      position 2
      keyword  FILE
      type     _LOGICAL
      access   READ
      default  'n'
      vpath    'DEFAULT'
      prompt   'Write output to a file?'
      help     'T - write output to file;  F - do not write it.'
   endparameter

   parameter DETAIL          # Flag specifying the details to be displayed.
      position 3
      keyword  DETAIL
      type     _CHAR
      access   READ
      default  'SUMMARY'
      vpath    'DEFAULT'
      prompt   'Details required:'
      help     'One of: SUMMARY, COLUMNS, PARAMETERS, TEXT, AST, FULL.'
   endparameter

   parameter QUIET           # Flag: operate in a quiet mode?
      position 4
      keyword  QUIET
      type     _LOGICAL
      access   READ
      default  FALSE
      vpath    'GLOBAL,DEFAULT'
      ppath    'GLOBAL'
      association  '<->GLOBAL.CURSAQUIET'
      prompt   'Quiet mode?'
      help     'Operate in a quiet mode where warnings are suppressed.'
   endparameter

   parameter ROWS
      type     '_INTEGER'
      access   WRITE
      vpath    'DEFAULT'
      default  1
      Association '->GLOBAL.CURSA_ROWS'
   endparameter

   parameter COLS
      type     '_INTEGER'
      access   WRITE
      vpath    'DEFAULT'
      default  1
      Association '->GLOBAL.CURSA_COLUMNS'
   endparameter

   parameter PARS
      type     '_INTEGER'
      access   WRITE
      vpath    'DEFAULT'
      default  1
      Association '->GLOBAL.CURSA_PARAMS'
   endparameter

   parameter NAMES
      type     '_CHAR'
      access   WRITE
      vpath    'DEFAULT'
      default  ' '
      Association '->GLOBAL.CURSA_NAMES'
   endparameter

endinterface
#+
#  Name:
#     CATPAIR.IFL
#  Type of Module:
#     ADAM A-task parameter interface.
#
#  Authors:
#     ACD: A C Davenhall (Leicester)
#  History:
#     14/2/95 (ACD): Original version.
#     1/3/95  (ACD): First stable version.
#     27/8/96 (ACD): Changed parameters for handling textual information.
#     25/6/99 (ACD): Added global access for catalogue names.
#     22/3/01 (ACD): Corrected global access for catalogue names.
#     5/4/01  (ACD): Added quiet mode parameter QUIET.
#-

interface CATPAIR

#   helplib '[help_library_specification]'

   parameter PRIMARY       # Name of the primary input catalogue.
      position 1
      keyword  PRIMARY
      type     _CHAR
      access   READ
      vpath    'PROMPT'
      ppath    'GLOBAL'
      association  '<-GLOBAL.CURSACAT'
      prompt   'Primary catalogue:'
      help     'Give the name of the primary input catalogue.'
   endparameter

   parameter SECOND        # Name of the secondary input catalogue.
      position 2
      keyword  SECOND
      type     _CHAR
      access   READ
      prompt   'Secondary catalogue:'
      help     'Give the name of the secondary input catalogue.'
   endparameter

   parameter OUTPUT        # Name of the output paired catalogue.
      position 3
      keyword  OUTPUT
      type     _CHAR
      access   READ
      vpath    'PROMPT'
      ppath    'GLOBAL'
      association  '->GLOBAL.CURSACAT'
      prompt   'Output catalogue:'
      help     'Give the name of the output paired catalogue.'
   endparameter

   parameter CRDTYP        # The type of coordinates.
      position 4
      keyword  CRDTYP
      type     _CHAR
      access   READ
      default  'S'
      prompt   'Give the type of coordinates to be paired:'
      help     'C - Cartesian,   S - spherical-polar (eg. R.A. and Dec.)'
   endparameter

   parameter PCRD1         # First primary coordinate.
      position 5
      keyword  PCRD1
      type     _CHAR
      access   READ
      prompt   'First primary coordinate:'
      help     'First coord. in primary for pairing (eg. a R.A. or X).'
   endparameter

   parameter PCRD2         # Second primary coordinate.
      position 6
      keyword  PCRD2
      type     _CHAR
      access   READ
      prompt   'Second primary coordinate:'
      help     'Second coord. in primary for pairing (eg. a Dec. or Y).'
   endparameter

   parameter SCRD1         # First secondary coordinate.
      position 7
      keyword  SCRD1
      type     _CHAR
      access   READ
      prompt   'First secondary coordinate:'
      help     'First coord. in secondary for pairing (eg. a R.A. or X).'
   endparameter

   parameter SCRD2         # Second secondary coordinate.
      position 8
      keyword  SCRD2
      type     _CHAR
      access   READ
      prompt   'Second secondary coordinate:'
      help     'Second coord. in secondary for pairing (eg. a Dec. or Y).'
   endparameter

   parameter PDIST         # Expression for critical distance.
      position 9
      keyword  PDIST
      type     _CHAR
      access   READ
      prompt   'Maximum separation for objects to pair:'
      help     'May be: a constant, primary column name or primary expression.'
   endparameter

   parameter PRTYP         # Set of paired rows to be produced.
      position 10
      keyword  PRTYP
      type     _CHAR
      access   READ
      default  'C'
      prompt   'Required set:'
      help     'Give one of: C, P, M, R or A.'
   endparameter

   parameter MULTP         # Include multiple matches in the primary?
      position 11
      keyword  MULTP
      type     _LOGICAL
      access   READ
      default  TRUE
      prompt   'Include primary multiple matches?'
      help     'Include multiple matches in the primary in the output catalogue?'
   endparameter

   parameter MULTS         # Include multiple matches in the secondary?
      position 12
      keyword  MULTS
      type     _LOGICAL
      access   READ
      default  FALSE
      prompt   'Include secondary multiple matches?'
      help     'Include multiple matches in the secondary in the output catalogue?'
   endparameter

   parameter ALLCOL        # Copy all the columns from both input catalogues?
      position 13
      keyword  ALLCOL
      type     _LOGICAL
      access   READ
      default  TRUE
      prompt   'Copy all the columns?'
      help     'Copy all the columns from both input cats. (answer yes if in doubt)?'
   endparameter

   parameter SPCOL        # Include special columns in the output catalogue?
      position 14         # (These columns give details of the paired objects.)
      keyword  SPCOL
      type     _LOGICAL
      access   READ
      default  TRUE
      vpath    'DEFAULT'
      prompt   'Special columns?'
      help     'Include special columns (answer yes if in doubt)?'
   endparameter

   parameter PRMPAR        # Copy parameters from the primary.
      position 15
      keyword  PRMPAR
      type     _LOGICAL
      access   READ
      default  TRUE
      prompt   'Copy primary parameters?'
      help     'Copy parameters in the primary to the output catalogue?'
   endparameter

   parameter SECPAR        # Copy parameters from the secondary.
      position 16
      keyword  SECPAR
      type     _LOGICAL
      access   READ
      default  FALSE
      prompt   'Copy secondary parameters?'
      help     'Copy parameters in the secondary to the output catalogue?'
   endparameter

   parameter PTEXT         # Copy textual information from the primary.
      position 17
      keyword  PTEXT
      type     _CHAR
      access   READ
      default  'C'
      prompt   'Copy text from primary?'
      help     'A - all,   C - comments (and history) only,   N - none.'
   endparameter

   parameter STEXT         # Copy textual information from the secondary.
      position 18
      keyword  STEXT
      type     _CHAR
      access   READ
      default  'N'
      prompt   'Copy text from secondary?'
      help     'A - all,   C - comments (and history) only,   N - none.'
   endparameter

   parameter TEXT          # Add comments describing the pairing.
      position 19
      keyword  TEXT
      type     _CHAR
      access   READ
      default  'Y'
      vpath    'DEFAULT'
      prompt   'Add comments summarising the pairing?'
      help     'Y - yes,   N - no.'
   endparameter

   parameter COLBUF        # Set of paired rows to be produced.
      position 20
      keyword  COLBUF
      type     _CHAR
      access   READ
      prompt   'Column:'
      help     'Enter the name of the required column, ''END'' to finish.'
   endparameter

   parameter QUIET           # Flag: operate in a quiet mode?
      position 21
      keyword  QUIET
      type     _LOGICAL
      access   READ
      default  FALSE
      vpath    'GLOBAL,DEFAULT'
      ppath    'GLOBAL'
      association  '<->GLOBAL.CURSAQUIET'
      prompt   'Quiet mode?'
      help     'Operate in a quiet mode where warnings are suppressed.'
   endparameter

endinterface
