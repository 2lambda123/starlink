interface CATGRID

#   helplib '[help_library_specification]'

   parameter CATIN                   # Name of the input catalogue.
      position 1
      keyword  CATIN
      type     _CHAR
      access   READ
      vpath    'PROMPT'
      ppath    'GLOBAL'
      association  '<->GLOBAL.CURSACAT'
