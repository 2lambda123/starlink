   parameter YMIN      # Y minimum for rectangular selection.
      position 22
      keyword  YMIN
      type     _CHAR
      access   READ
      prompt   'Y minimum:'
      help     'Minimum Y value for the required rectangle.'
   endparameter

   parameter YMAX      # Y maximum for rectangular selection.
      position 23
      keyword  YMAX
      type     _CHAR
      access   READ
      prompt   'Y maximum:'
