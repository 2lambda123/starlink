#

use strict;

require 5.004;

use English;
use Tk;
use Getopt::Long; 
use File::Spec;    # For concatenation of directory paths
use Sys::Hostname; # For hostname
 
# use Tk::widgets qw/Dialog ErrorDialog/;
use subs qw/inswt/;
use vars qw/$MW $PW $OM $CP $C $FONT/;
use vars qw/$BW $BMB $SF $MB $BF $AF $BC/;

#---------------------------------------------------------------------------

my ($prog, $rest) = reverse(split(/\//,"$0",2));
my $version = "2.0";

# Get host name (although it is not used)
my $host = hostname;

# Domain name
my $domain;
if ($^O eq 'MSWin32') {
  $domain = '';
} else {
  chomp( $domain = `domainname`);
  $domain =~ s/JAC\.//; # Remove JAC. from domain name
  ($domain,$rest) = split(/\./,$domain,2);  
}

my ($opt_v, $opt_d, $opt_h);

my $status = GetOptions(
			'help' => \$opt_h,
			'version' => \$opt_v,
			'debug' => \$opt_d,
		       );


# Get arguments 
($opt_v) && do { &ver_text; exit; };

# Debug output: 0 = none, 1 = little, 2 = lot?
my $debug = 0;
($opt_d) && do { $debug = 1;};

(($opt_h) || $#ARGV >= 2) && do { &help_text; exit; };

# Unix and Vax directories with noise files
my $datadir = $ENV{'DATADIR'};
unless (defined $datadir && $datadir ne '') {
  $datadir = "'jac_default_directories'";
}

# Scuba_prefix (obsdate)
my ($us, $um, $uh, $md, $mo, $yy, $wd, $yd, $isdst) = gmtime(time);
my $obsdate = $ENV{'SCUBA_PREFIX'};

$obsdate = '' unless (defined $obsdate && $obsdate =~ /^\d{8}$/);

# If no Scuba prefix, try extract from DATADIR
if ($datadir !~ /jac_default/ && $obsdate eq "") {
    $datadir =~ /\/(\d{8})\// && (($obsdate) = ($1));
}

# Still no luck: default to current date
if ($datadir =~ /jac_default/ && $obsdate eq "") {
    # Deal with the Y2K problem!
    if ($yy >= 87) {
	$obsdate = 10000*(1900+$yy)+100*($mo+1)+($md);
    } else  {
	$obsdate = 10000*(2000+$yy)+100*($mo+1)+($md);
    }
}

# Array with location to search for noise file
my @disk = ();
my $idsk = -1;
&set_disks;

# Noise file variables:

my ($run, $source) = ("", "");
my $prevrun = "";
my $nextrun = "";
my $hst = "00:00:00.0";
my $ut =  "00:00:00.0";
my (@runlist, @noiseentry, %bol, %xybol, @pw_point, @bw_point);
my (%min, %max, %defmin, %defmax, $varinfo, $iteminfo);
my ($cutoff, $cutoff_line);
my $location;

# Columns in file and fault min/max plot scaling
my @col = ( "Bolometer", "Chop", "Chop error", "Cal", "Cal error", "Quality" );
$defmin{"$col[0]"} =      0; $defmax{"$col[0]"} =   140;
$defmin{"$col[1]"} =   -100; $defmax{"$col[1]"} =   100;
$defmin{"$col[2]"} =      0; $defmax{"$col[2]"} =   400;
$defmin{"$col[3]"} =   1000; $defmax{"$col[3]"} = 13000;
$defmin{"$col[4]"} =      0; $defmax{"$col[4]"} =  1000;
$defmin{"$col[5]"} =  -0.02; $defmax{"$col[5]"} =  1.02;

# Widget colors and variables
my ($wbg, $wfg, $bbg, $bfg, $tc, $fc, $pc, $qc, $cc, $bc, $dc);
my ($listfont, $plotfont, $labelfont, $newplot, $op_message, %pinfo);
my ($w_control, $w_obsdate, $w_chop, $w_choperr, $w_cal, $w_calerr);
my ($w_autoscale, $as_text, $as_val, $w_rf, $w_mr, $w_next, $w_prev);
my $bwmode;
my $plot_id;
my $flat_id; 

# Canvas dimensions
my $xplot   = 660;
my $yplot   = 300;
my $xleft   =  50;
my $xright  = 610;
my $ytop    =  50;
my $ybottom = 250;

# Default plot variable (from @col) and Canvas message
my $plotvar = 2;
my $flatvar = undef;
my $newmode;
my $defmess = "Point on dot for info\nDouble-click for flat-field\nLeft button for area define";
my $ffmode = "names";

# Plot limits (default to autoscaling)
my ($xlo, $xhi, $ylo, $yhi) = ('d', 'd', 'd', 'd');
my ($xr, $yr, $xp, $yp);
my ($alo, $ahi, $blo, $bhi);

# Override defaults with command-line parameters!
$obsdate = $ARGV[0] if ($#ARGV >= 0);
$run     = $ARGV[1] if ($#ARGV > 0);

&fill_bol;

@noiseentry = ();
%pinfo = ();
if ($^O eq 'MSWin32') {
  $pinfo{'prcmd'} = File::Spec->catfile(File::Spec->tmpdir, 'scunoise.ps');
} else {
  $pinfo{'prcmd'} = '| lpr';   
}

$newplot = 1;     # Note: -1 is used to clear the canvas without a new plot
$op_message = "";

$xlo = $xhi = $ylo = $yhi = 0;
$alo = $ahi = $blo = $bhi = "d";

#-----------------------------A E S T H E T I C S----------------------------

$FONT      = '-*-Helvetica-Medium-R-Normal--*-140-*-*-*-*-*-*';
$listfont  = '-*-Courier-Medium-R-Normal--*-120-*-*-*-*-*-*';
$plotfont  = '-*-Helvetica-Medium-R-Normal--*-180-*-*-*-*-*-*';
$labelfont = '-*-Helvetica-Medium-R-Normal--*-140-*-*-*-*-*-*';

# Some colours...

$wbg = "#555555";
$wfg = "#ffffff";
$bbg = "#eeeeee";
$bfg = "#000088";
$tc =  'Brown';              # Text color
$fc =  'Midnightblue';       # Frame color
$pc =  'Skyblue2';           # Points color
$qc =  'DarkOrange';         # Selected Point color
$cc =  'Red';                # Aux. color
$bc =  'PapayaWhip';         # Flat-field Bolometer color
$dc =  'Gold';               #     ,,     noisy bol. color

#----------------------------------------------------------------------------
# Now open a Tk window

#----------------------------------------------------------------------------
$MW = MainWindow->new;
$MW->title('Scuba Noise Data');
$MW->configure(
	       -background=>$bbg,
	       -foreground=>$bfg
	       );

# Open root plot frame
&plot_frame;

# Try populate runlist
&scandisk;

# Read data
&getdata;

# Plot data
&plot;


#----------------------------------------------------------------------------
# Start the event handler
MainLoop;

#----------------------------------------------------------------------------
# Fill array disks with search locations for noise files.
sub set_disks {

  $idsk = -1;
  @disk = ();

  if ($datadir ne "'jac_default_directories'" && $datadir ne "") {
    push(@disk,$datadir);
    if ($datadir =~ /\/dem/) {
      my $ddir = $datadir;
      $ddir =~ s/\/dem/\/ro/;
      push(@disk,$ddir) if (-e "$ddir");
    }
  }

  push(@disk,File::Spec->curdir);
  if ($domain eq "jach" || $domain eq "Hilo") {
    push(@disk,"/net/luu/scubadata");
    push(@disk,"/net/mwtsrv/disk\$scuba2/scuba/observe");
    push(@disk,"/net/mwtsrv/disk\$scuba1/scuba/observe");
  } elsif ($domain eq "jcmt") {
    push(@disk,"/jcmtdata/raw/scuba");
    push(@disk,"/net/mwtsrv/disk\$scuba2/scuba/observe");
    push(@disk,"/net/mwtsrv/disk\$scuba1/scuba/observe");
    push(@disk,"/net/luu/scubadata");
  } elsif ($^O eq 'MSWin32') {
    push(@disk, "\\\\Ola\\scuba-data\\");
  }

  if ($debug) {
    my $i = 0;
    foreach my $disk (@disk) {
      print "DEBUG: Location $i: $disk[$i]\n";
      $i++;
    }
  }

}

#----------------------------------------------------------------------------
# Create the Run field: text or button depending on number of run values.

sub mk_runfield {

  if (defined $w_mr) {
    destroy $w_mr;
    $w_mr = undef;
  }

  if ($#runlist > -1) {
    $w_mr = $w_rf->Menubutton(
			-text => 'Run', 
			-relief => 'raised',
			-state => 'disabled'
			 );
    $w_mr->configure(-state=> 'active');
    my $i;
    for ( $i = 0; $i <= $#runlist; $i++ ) {
      my $irun = $runlist[$i];
      $w_mr->command( -label => "$irun",
		    -command =>sub{$run = $irun;
				   &getdata;
				   &plot;
                               });
    }

  } else {
    $w_mr = $w_rf->Label(-text => "Run: ");
  }
  $w_mr->grid(qw/-sticky e -row 1 -column 1/);
}

#----------------------------------------------------------------------------
# Create a plot frame
sub plot_frame {

    # Delete window/frame if it exists.
    $MW->withdraw;

    print "DEBUG: ...Entered plot_frame\n" if ($debug);
    # Create plot Canvas if it does not yet exist.
    unless (defined $PW) {
        print "DEBUG: ...Creating plot window in MW\n" if ($debug);
	$PW = $MW->Toplevel(
			 -takefocus => 1
			 );
        $PW->title('Scuba Noise Data');

        &top_menu_bar;

        &message_frame;

        &plot_canvas;

        &bottom_menu_bar;
    }

}

sub top_menu_bar {

    # Create top menu bar frame
    $MB = $PW->Frame(
		     -borderwidth => 0
		     );
    $MB->pack(-side => 'top', -fill => 'x');

    # Add "Options" button above canvas
    $w_control = $MB->Button(
			     -text         => 'Options',
			     -command      => sub{&options_panel}
			     );
    $MB->Advertise('Control_button' => $w_control);
    $w_control->pack(-side => 'left', -fill => 'y');
    
    # Make Auto/Default button in frame so that text can be flipped.
    # Add "Autoscale" button above canvas
    $AF = $MB->Frame(
                     -background => $bbg,
                     -relief => 'flat',
		     );
    $AF->pack(-side => 'left', -fill => 'y');

    &autoscale_button;

    # Create Scan and Date frame in menubar 
    $SF = $MB->Frame(
                     -background => $bbg,
                     -relief => 'groove',
		     -borderwidth => 3
		     );
    $SF->pack(-side => 'left', -fill => 'y');
    
    my $scan = $SF->Button(-text=>'Scan for:',
			   -relief=>'raised',
			   -command=>sub{
			       $OM->delete('1.0','end');
			       $OM->insert('end',"Scanning...");
			       $OM->update('idletasks');
			       &set_disks;
			       $run ="";
			       &scandisk;
			       &getdata; 
			       &plot;
			   })->pack(-side => 'left', -fill => 'y');;
    
    # Obsdate Entry
    my $oe = $SF->Entry(-relief => "sunken", -width => 9,
			-textvariable => \$obsdate);
    $oe->pack(-side => 'left', -fill => 'y');
    $oe->bind('<Return>' => [$scan => 'invoke']);

    my $scan2 = $SF->Button(-text=>'noise files',
			    -relief=>'raised',
			    -command=>sub{
				$OM->delete('1.0','end');
				$OM->insert('end',"Scanning...");
				&set_disks;
				$run ="";
				&scandisk;
				&getdata; 
				&plot;
			    })->pack(-side => 'left', -fill => 'y');;
    
    # Add "Exit" button on above canvas
    my $w_exit = $MB->Button(
			     -text         => 'Exit',
			     -command      => sub{destroy $MW}
			     );
    $MB->Advertise('Exit_button' => $w_exit);
    $w_exit->pack(-side => 'right', -fill => 'y');
}

sub autoscale_button {

    if (defined $w_autoscale) {
      destroy $w_autoscale;
      $w_autoscale = undef;
    }

    $as_text = "Autoscale";
    $as_val  = "a";

    if ("$bhi" ne "d") {
	$as_text = "Def scale";
        $as_val = "d";
    }

    $w_autoscale = $AF->Button(
				  -text         => $as_text,
				  -command      => sub{$alo = $ahi = $as_val;
						       $blo = $bhi = $as_val;
                                                       &autoscale_button;
						       $newplot=1;
						       &plot;

						      }
				  );
    $MB->Advertise('Autoscale_button' => $w_autoscale);
    $w_autoscale->pack(-side => 'left', -fill => 'y');
}

sub message_frame {

    # Text message window
    $OM = $PW->Text(
		    -wrap       => 'word',
		    -relief     => 'groove',
		    -background => $bbg,
		    -foreground => 'Indianred',
		    -height     => 2,
		    -width      => 50,
		    -takefocus  => 0,
		    );
    $PW->Advertise('Message_window' => $OM);
    $OM->pack(-side => 'top', -fill => 'x');

    if ($op_message ne "") {
	$OM->delete('1.0','end');
	$OM->insert('end',"$op_message");
	$OM->update('idletasks');
        $op_message = "";
    }
}

sub plot_canvas {

    # Create a canvas 
    $C = $PW->Canvas(
		     -relief => 'groove',
		     -border => 3, 
		     -background => 'White',
		     -width  => "$xplot", 
		     -height => "$yplot",
		     -cursor => 'top_left_arrow',
		     );
    $PW->Advertise('canvas' => $C);
    $C->pack(-side => 'top', -fill => 'x');	

}

sub bottom_menu_bar {
 
    # Create bottom button bar
    $BF = $PW->Frame(
		     -borderwidth => 0
		     );
    $BF->pack(-side => 'top', -fill => 'x');

    # Bottom bar:       
    # Create sub-button frames
    
    # Add "Chop Error" button on left below canvas
    $w_choperr = $BF->Button(
			     -text         => "$col[2]",
			     -command      => sub{$plotvar=2;
						  $newplot=1;
						  $alo = $ahi = "d";
						  $blo = $bhi = "d";;
						  &plot}
			     );
    $BF->Advertise('Choperr_button' => $w_choperr);
    $w_choperr->pack(-side => 'left', -fill => 'y');
    
    # Add "Chop" button on left below canvas
    $w_chop = $BF->Button(
			  -text         => "$col[1]",
			  -command      => sub{$plotvar=1;
					       $newplot=1;
					       $alo = $ahi = "d";
					       $blo = $bhi = "d";
					       &plot}
			  );
    $BF->Advertise('Chop_button' => $w_chop);
    $w_chop->pack(-side => 'left', -fill => 'y');
    
    # Add "Cal" button on left below canvas
    $w_cal = $BF->Button(
			 -text         => "$col[3]",
			 -command      => sub{$plotvar=3;
					      $newplot=1;
					      $alo = $ahi = "d";
					      $blo = $bhi = "d";
					      &plot}
			 );
    $BF->Advertise('Cal_button' => $w_cal);
    $w_cal->pack(-side => 'left', -fill => 'y');

    # Add "Cal error" button on left below canvas
    $w_calerr = $BF->Button(
			    -text         => "$col[4]",
			    -command      => sub{$plotvar=4;
						 $newplot=1;
						 $alo = $ahi = "d";
						 $blo = $bhi = "d";
						 &plot}
			    );
    $BF->Advertise('Calerr_button' => $w_calerr);
    $w_calerr->pack(-side => 'left', -fill => 'y');
    
    # Add "Next" button on right below canvas
    my $w_next = $BF->Button(
			     -text         => "-next->",
			     -command      => sub{$newplot=1;
						  &prevnext;
						  $run = $nextrun;
						  &getdata;
						  &plot}
			     );
    $BF->Advertise('Next_button' => $w_next);
    $w_next->pack(-side => 'right', -fill => 'y');
    
    # Add "Run" button on right below canvas
    $w_rf = $BF->Frame(
		     -borderwidth => 0
		     );
    $BF->Advertise('Run_button' => $w_rf);
    $w_rf->pack(-side => 'right', -fill => 'y');
    
    # Add "Prev" button on right below canvas
    my $w_prev = $BF->Button(
			     -text         => "<-prev-",
			     -command      => sub{$newplot=1;
						  &prevnext;
						  $run = $prevrun;
						  &getdata;
						  &plot}
				      );
    $BF->Advertise('Prev_button' => $w_prev);
    $w_prev->pack(-side => 'right', -fill => 'y');
	
}

sub prevnext {
      my $i;
      for ($i = 0; $i <= $#runlist; $i++ ) {
	  last if ($runlist[$i] == $run);
      }
      $i = -1 if ($i > $#runlist);
      if ($i > 0 ) { 
        $prevrun = $runlist[$i-1];
      } else {
        $prevrun = $runlist[$#runlist];
      }
      if ($i < $#runlist ) {
        $nextrun = $runlist[$i+1];
      } else {
	$nextrun = $runlist[0];
      }
}

#----------------------------------------------------------------------------
# Do the Control Panel
sub options_panel {

    # Open new window for Control/Options Panel
    my $CP = $MW->Toplevel(
	     -takefocus => 1
			   );
    $CP->title('Control Panel');

    # Add frame for buttons
    my $menubar = $CP->Frame();
    $menubar->grid(qw/-sticky ew/);
    $menubar->gridColumnconfigure(qw/0 -weight 1/);

    # Dismiss
    my $dismiss = $menubar->Button(-text=>'Dismiss',
				   -relief=>'raised',
				   -command=>sub{
				   $w_control->configure( -state => 'active')
				   if (defined $PW);
				   destroy $CP})->pack(-side=>'right');

    # Exit
#    $menubar->Button(-text=>'Exit',
#		     -relief=>'raised',
#		     -command=>sub{destroy $MW})->pack(-side=>'right');


    # Open frame for plot limit entries
    my $CT = $CP->Text(
		       -wrap       => 'word',
		       -relief     => 'groove',
		       -foreground => 'midnightblue',
                       -background => $bbg,
                       -height     => 3,
                       -width      => 30,
		       -takefocus  => 0,
		       )->grid(qw/-sticky nsew/);
    $CT->insert('end',"Bolometer: use names or numbers\n");
    $CT->insert('end',"   (LW bolometers are  101-137)\n");
    $CT->insert('end',"Default/Auto scaling: set value to 'd'/'a'.\n");

    # Datdir Entry
    my $of = $CP->Frame(
                        -borderwidth => 5,                
			-takefocus => 1
			)->grid(qw/-sticky nsew/);
    my $de = $of->Entry(-relief => "sunken", -width => 32,
			 -textvariable => \$datadir);
    my $dl = $of->Label(-text => "Datadir:");
    $dl->grid(qw/-sticky e -row 1 -column 1/);
    $de->grid(qw/-sticky w -row 1 -column 2/);

    # Open frame for plot limit entries
    my $CF = $CP->Frame(
                        -borderwidth => 5,
			-takefocus => 1
			)->grid(qw/-sticky nsew/);

    # X limits
    my $ex1 = $CF->Entry(-relief => "sunken", -width => 7,
			 -textvariable => \$alo);
    my $lx1 = $CF->Label(-text => "Bolometer min:");
    my $ex2 = $CF->Entry(-relief => "sunken", -width => 7,
			 -textvariable => \$ahi);
    my $lx2 = $CF->Label(-text => "max:");

    # Y limits
    my $ey1 = $CF->Entry(-relief => "sunken", -width => 7,
			 -textvariable => \$blo);
    my $ly1 = $CF->Label(-text => "Y-axis min:");
    my $ey2 = $CF->Entry(-relief => "sunken", -width => 7,
			 -textvariable => \$bhi);
    my $ly2 = $CF->Label(-text => "max:");

    $lx1->grid(qw/-sticky news -row 1 -column 1/);
    $ex1->grid(qw/-sticky news -row 1 -column 2/);
    $lx2->grid(qw/-sticky news -row 1 -column 3/);
    $ex2->grid(qw/-sticky news -row 1 -column 4/);
    $ly1->grid(qw/-sticky news -row 2 -column 1/);
    $ey1->grid(qw/-sticky news -row 2 -column 2/);
    $ly2->grid(qw/-sticky news -row 2 -column 3/);
    $ey2->grid(qw/-sticky news -row 2 -column 4/);
    $ex1->focus;

    # Open frame for Replot and Print section
    my $CB = $CP->Frame();
    $CB->grid(qw/-sticky ew/);

    # Replot button
    $CB->Button(-text=>'Replot',
		     -relief=>'raised',
		     -command=>sub{$newplot=1; &plot})
		                    ->grid(qw/-sticky w -row 1 -column 1/);

    # Clear limits button
    $CB->Button(-text=>'Default scaling',
		     -relief=>'raised',
		     -command=>sub{$alo=$ahi=$blo=$bhi='d';})
		                    ->grid(qw/-sticky e -row 1 -column 2/);

    # Autoscaling button
    $CB->Button(-text=>'Autoscaling',
		     -relief=>'raised',
		     -command=>sub{$alo=$ahi=$blo=$bhi='a';})
		                    ->grid(qw/-sticky e -row 1 -column 3/);

    # Print button with printer command
    my $w_print = $CB->Button(
        -text         => 'Print',
        -command      => [\&area_save, $C, \%pinfo],
    );
    $CF->Advertise('PostScript_button' => $w_print);

    my $w_prcmd = $CB->Entry(
        -textvariable => \$pinfo{'prcmd'},
    );
    $CF->Advertise('entry' => $w_prcmd);
    $w_print->grid(qw/-sticky w -row 2 -column 1/);
    $w_prcmd->grid(qw/-sticky e -row 2 -column 2/);

    $w_prcmd->bind('<Return>' => [$w_print => 'invoke']);

    # Disable main window control button
    $w_control->configure( -state => 'disabled') if (defined $PW);

}

#----------------------------------------------------------------------------
sub getdata {

    if ($op_message eq "" && $newplot != -1) {
	&rddata;
    }

}

#----------------------------------------------------------------------------
sub scandisk {

    my ($i, $line, @files, $file, $rofile);
    my $found = 0;
    $idsk = -1;
    $newplot = 1;
    $op_message = "";
    @runlist = ();

    ($obsdate =~ /^\d/)  or
	die "Programming error obsdate not set! : $!\n";

    # Possible locations of the data: first try $DATADIR if existing,
    # then ./ followed by the 2 default locations at the JAC and the summit.

    my ($j1, $j2, $j3) = "";
    $i = 0;
    while ($found == 0 && $i <= $#disk) {
	@runlist = ();

        if ($disk[$i] =~ /mwt/i && ($domain eq "jach" || $domain eq "Hilo")
                         && defined $OM) {
            $OM->delete('1.0','end');
	    $OM->insert('end',"Trying VAX disks at summit. Be patient for automount to complete...\n");
            $OM->update('idletasks');
        }
        elsif ($disk[$i] =~ /luu/i && $domain eq "jcmt" && defined $OM) {
            $OM->delete('1.0','end');
	    $OM->insert('end',"Trying LUU disk at JAC. Be patient for automount to complete...\n");
            $OM->update('idletasks');
        }

        $location = $disk[$i];
	if ($location =~ /luu/ || $location =~ /Ola/) {
	  # Both these are luu
	  my $sem = find_sem($obsdate);
	  $location = File::Spec->catdir($location, $sem, $obsdate);
	} elsif ($location =~ /raw/) {
	  # summit linux version of data disk
	  $location = File::Spec->catdir($location, $obsdate, 'ro');
	} elsif ($location =~ /\/mwt/) {
	  # This is deemed to be a vax disk
	  $location = File::Spec->catdir($location, $obsdate, 'ro');
	}

	print "DEBUG: Trying directory '${location}'..." if ($debug);
	@files = ();
        $op_message = "";
	if (-e "${location}") {
	    $found = 1;
	    print " found\n" if ($debug);

	    # Read directory
	    opendir( DIR, "$location") or
		do {$found = 0; $op_message = "Can't open directory $location! : $!"; };

            my $odate = substr($obsdate,2,99);
	    if ($found && $op_message eq "") {
    	        push(@files,grep(/$odate/,grep(/^noise/i, readdir(DIR))));
		closedir(DIR);
	    }

            print "DEBUG: Found " if ($debug);
            print $#files+1 if ($debug);
            print " noise files for ${odate}.\n" if ($debug);
	    # if any noise files
	    if ($op_message eq "" && $#files >= 0) {

		# prompt used
		print "DEBUG: Run numbers of noise files: " if ($debug);
		foreach $file (@files) {
		    ($j1, $j2, $j3) = split(/\_/,$file,3);
		    ($j1, $j2) = split(/\./,$j3,2);
		    push(@runlist,$j1);
		    print " $j1" if ($debug);
		}
                print "\n" if ($debug);
	    } else {
	        $op_message = 
		  "No noise files found for $obsdate at '${location}'.";
                $found = 0;
		$i++;
	    }
      
	} else {
	    print "DEBUG: not found\n" if ($debug);
	    $i++;
	}

    }

    if ($#runlist > -1) {
      @runlist = sort { $a <=> $b } @runlist ;
      $run = $runlist[$#runlist] if ("$run" eq "");
    }
    &mk_runfield;

    if ($found) {
	$idsk = $i;
    } elsif ( $op_message eq "" ) {
        $newplot = -1;
	$op_message = 
	  "Error: can not find $obsdate noise files at any location.";
    }

    $OM->delete('1.0','end');
    $OM->insert('end',"$op_message");
    $OM->update('idletasks');
    $op_message= "";
}

#----------------------------------------------------------------------------
sub rddata {

    my ($i, $j, $line, $rofile);
    my $found = 0;
    $op_message = "";

    $rofile = "noise_" . substr($obsdate,2,99) . "_" . $run . ".dat";

    print "DEBUG: Reading $rofile...\n" if ($debug);

    # Open the file and read
    my @log = ();

    my $noise_file = File::Spec->catfile($location, $rofile);

    open(NOISE,"< $noise_file") or do { 

	# Try one more time
        print "DEBUG: ...Failed to open file $location/$rofile: re-scanning...\n" if ($debug);
        &scandisk;

        my $noise_file = File::Spec->catfile($location, $rofile);
	open(NOISE,"< $noise_file") or do { 
	    $OM->delete('1.0','end');
	    $OM->insert('end', "Error: could not open $rofile! : $!");
	    $OM->update('idletasks');
	    $op_message = "";
            $newplot = -1;   # Force clearing of plot canvas
	    return;
	};
    };

    print "DEBUG: okay\n" if ($debug);

    @log = <NOISE>; 
    close(NOISE);

    my @c = ();

    for ( $j = 0; $j < 5; $j++ ) {
	$min{"$col[$j]"} = 99999;
	$max{"$col[$j]"} = -99999;
    }

    # Extract the information from the file.
    @noiseentry = ();
    $i = 0;
    my $surf_header = 0;
    while ($i <= $#log) {

	$line = $log[$i];
        $surf_header = 1 if ($i == 0 && $line =~ /surf/i);

        if ($surf_header) {
      	  if ( $line =~ /source/i ) {
	    ($rest, $source) = split(/:/,"\L$line",2);
            $source =~ s/\s+//g;
	    $i++;
	    next;    
          # Get HST
	  } elsif ($line =~ /time of observation/i) {
	    ($rest, $hst) = split(/:/,$line,2);
            $hst =~ s/\s+//g;
	    $hst = substr($hst,0,8);
	    $i++;
	    next;
	  }
	} else {
	  # Get the source
	  if ( $line =~ /^source/ ) {
	    $line =~ s/^\s+//;
	    $line =~ s/\s+/ /g;
	    ($rest, $source) = split(/ /,$line,2);
	    $i++;
	    next;
          # Get HST
	  } elsif ($line =~ /^! / && substr($line,2,5) ne 'NOISE') {
	    $hst = substr($line,13,8);
	    $i++;
	    next;
	  }
	}

        # Convert to UT time
        my ($hh, $mmss) = split(/:/,$hst,2);
        $hh = int($hh + 10 + 0.5);
        $hh -= 24 if ($hh > 24);
        $hh = "0$hh" if ($hh < 10);
        $ut = $hh . ":" . $mmss;

	# Skip the other header lines
	unless ( $line =~ /^[A-I]\d/ ) {
	    $i++;
	    next;
	}

	# Some messy stuff which probably can be done a lot better
	# but don't mess with things that work
	$line =~ s/^\s+//;
	$line =~ s/\s+/ /g;
	($c[0], $c[1], $c[2], $c[3], $c[4], $c[5], $rest) = split(/ /,$line,7);

	print "$c[0] $c[1] $c[2] $c[3] $c[4] $c[5]\n" if ($debug > 1);

	# Push onto hash array
	my %ref = ();
	for ( $j = 0; $j < 6; $j++) {
	    $ref{"$col[$j]"}   = $c[$j];
	}
	$c[0] = $bol{"$c[0]"};
	$ref{'bolnr'}     = $c[0];
	push( @noiseentry, \%ref );
	
	# Minmax of values
	if ( $c[5] == 0  ) {
	    for ( $j = 0; $j < 5; $j++ ) {
		$min{"$col[$j]"} = 
		  (${c[$j]} < $min{"$col[$j]"} ? ${c[$j]} : $min{"$col[$j]"});
        	$max{"$col[$j]"} = 
	          (${c[$j]} > $max{"$col[$j]"} ? ${c[$j]} : $max{"$col[$j]"});
	    }
        }
        $i++;
    }

    if ($debug) {
	my ($mmin, $mmax);
	for ( $j = 0; $j < 5; $j++ ) {
	    $mmin = $min{"$col[$j]"};
	    $mmax = $max{"$col[$j]"};
	    print "DEBUG: ${col[$j]}: from $mmin to $mmax\n";
	}
    }

}

#----------------------------------------------------------------------------
sub plot {

    # Create a  graph on the canvas

    my($i, $x, $y, $point, $xe, $ye, $val);

    print "DEBUG: ...Entered plot\n" if ($debug);
    unless (defined $PW) {
        print "DEBUG: ...Creating new plot_frame\n" if ($debug);
	&plot_frame;
    }

    $pinfo{'lastX'} = 0;
    $pinfo{'lastY'} = 0;
    $pinfo{'areaX2'} = -1;

    # Special: just add to message  and clear window
    if ($newplot == -1) {
        if ($#runlist > -1) {
	    $OM->insert('end',"\nClick 'RUN' to see list of noise files ");
	    $OM->insert('end',"found in $location.");
	}
	$OM->update('idletasks');
        if (defined $C) {
	    $C->delete('all');
	}
        return;
    }

    # If a new plot needs to be made, set new boundaries
    if ($newplot) {

        # Delete any existing plot
        if (defined $C) {
	    $C->delete('all') ;
	}

        # Set plot Id
        $plot_id = "${obsdate}_${run}_${plotvar}";

        # Re-activate buttons and basic message
	$w_choperr->configure( -state => 'active') if (defined $w_choperr);
	$w_chop->configure( -state => 'active') if (defined $w_choperr);
	$w_cal->configure( -state => 'active') if (defined $w_choperr);
	$w_calerr->configure( -state => 'active') if (defined $w_choperr);

	$OM->delete('1.0','end');
        if ($#runlist > -1) {
	    $OM->insert('end',"Click 'RUN' to see list of noise files ");
	    $OM->insert('end',"found in $location.");
	}
	$OM->update('idletasks');

	# Copy base scaling from saved values
        $xlo = $alo;
        $xlo = $bol{"\U$alo"} if ($alo =~ /^[a-zA-Z]\d/);
	$xhi = $ahi; 
	$xhi = $bol{"\U$ahi"} if ($ahi =~ /^[a-zA-Z]\d/);
        $ylo = $blo;
        $yhi = $bhi;

        # If not 0 will extend x(y)axis by 2*xe(ye)*axis;
        $xe = 0;
        $ye = 0;

        # Auto and Default scaling for X-axis: just use default
	$xlo = $defmin{"$col[0]"} if ($xlo =~ /^[a-zA-Z]/);
	$xhi = $defmax{"$col[0]"} if ($xhi =~ /^[a-zA-Z]/);

        # Default scaling Y axis
	$ylo = $defmin{"$col[$plotvar]"} if ($ylo =~ /^d/i);
	$yhi = $defmax{"$col[$plotvar]"} if ($yhi =~ /^d/i);

        # Auto-scaling if 'a': based on min/max y-value + small extent
        $ye  = 0.025 if ($yhi =~ /^a/i);
	$ylo = $min{"$col[$plotvar]"} if ($ylo =~ /^a/i);
	$yhi = $max{"$col[$plotvar]"} if ($yhi =~ /^a/i);

        # Guard against zero-length axes
        $xlo = $xhi = "d" if ($xlo eq $xhi);
        $ylo = $yhi = "d" if ($ylo eq $yhi);

        if ($xlo > $xhi) { $val = $xhi; $xhi = $xlo; $xlo = $val; }
        if ($ylo > $yhi) { $val = $yhi; $yhi = $ylo; $ylo = $val; }

        # Round to integer
	$ylo = int($ylo-0.5);
	$yhi = int($yhi+0.5);
    }

    #  If $xe, $ye not zero adds extends axes some (auto-scaling)
    $xe = $xe*($yhi-$ylo);
    $ye = $ye*($yhi-$ylo);

    # Plot range 
    $xhi = $xhi+$xe; $xlo = $xlo-$xe; $xr = ($xhi-$xlo);
    $yhi = $yhi+$ye; $ylo = $ylo-$ye; $yr = ($yhi-$ylo);

    print "DEBUG: X-axis: $xlo -- $xhi ($xr)\nDEBUG: Y-axis: $ylo -- $yhi ($yr)\n"
      if ($debug);

    if ($newplot){
        # Title and plot variable source
	$C->create('text', $xplot/2, $ytop-30, 
		   -text => 'Scuba Noise Statistics', 
		   -font => $plotfont, -fill => $tc);
        $C->delete($varinfo) unless ($newplot) ;
        $varinfo = $C->create('text', $xplot/2, $ytop-10, 
			      -text => "$col[$plotvar]",
			      -font => $plotfont, -fill => $tc);
        # Display observation info: date, time, run and source
	$C->create('text', $xleft, $ytop-30, 
		   -text => "${obsdate}UT", -anchor => 'w',
		   -font => $plotfont, -fill => $tc);
	$C->create('text', $xleft, $ytop-10, 
		   -text => "$ut", -anchor => 'w',
		   -font => $plotfont, -fill => $tc);
	$C->create('text', 2*$xleft, $ybottom+35, 
		   -text => "$run:$source", 
		   -font => $plotfont, -fill => $tc);
        # LW and SW section
        if ($xlo <= 100 && $xhi >= 100) {
	    $x = $xleft + (96.5 - $xlo) * ($xright-$xleft)/$xr;
	    $C->create('line', $x, $ybottom,  $x, $ytop+5, -width => 1,
		       -fill => $fc)
		if ($x >= $xleft+10 && $x <= $xright-10 );
	    $C->create('text', $x-15, $ytop+10, -text => "SW", 
		       -anchor => 'center', 
		       -font => $labelfont, -fill => $fc)
		if ($x-15 >= $xleft+10 && $x-15 <= $xright-10 );
	    $C->create('text', $x+15, $ytop+10, -text => "LW", 
		       -anchor => 'center', 
		       -font => $labelfont, -fill => $fc)
		if ($x+15 >= $xleft+10 && $x+15 <= $xright-10 );
	}
        # X-axis + label
	$C->create('line', $xleft, $ybottom, $xright, $ybottom, -width => 2, 
		   -fill => $fc);
	$C->create('text', $xplot/2, $ybottom+35, -text => "$col[0]", 
		   -font => $plotfont, -fill => $tc);
        # Y-axis + label
	$C->create('line', $xleft,  $ytop,  $xleft, $ybottom, 
		   -width => 2, -fill => $fc);
	$C->create('text', $xleft-30, $ytop+18, -text => 'nV', 
		   -font => $plotfont, -fill => $tc);
        # X Tick marks
        my $xtick = 14;
	for($i = 0; $i <= $xtick; $i++) {
	    $x = $xleft + ($i * ($xright-$xleft)/$xtick);
	    $C->create('line', $x, $ybottom, $x, $ybottom+5, -width => 2, 
		       -fill => $fc);
	    $val = (($val=int($xlo+$i*$xr/$xtick)) >= 100 ? $val-100 : $val);
	    $C->create('text', $x, $ybottom+4, 
		       -text => "$val", -anchor => 'n',
		       -font => $labelfont, -fill => $fc);
	}
        # Y Tick marks
        my $ytick = 4;
	for ($i = 0; $i <= $ytick; $i++) {
	    $y =  $ybottom - ($i * ($ybottom-$ytop)/$ytick);
	    $C->create('line', $xleft, $y, $xright, $y, -width => 1, 
		       -fill => $tc)
		unless ($i == 0 || $i == $ytick);
	    $C->create('text', $xleft-4, $y, 
		       -text => (int(($ylo+$i*$yr/$ytick)+0.5)),
		       -anchor => 'e',
		       -font => $labelfont, -fill => $fc);
	} # forend
    }
    
    # Help for user
    $C->delete($iteminfo) unless ($newplot) ;
    $iteminfo = $C->create('text', $xplot-125, 25, -text => "$defmess",
			   -font => $listfont, -fill => $cc);

    # Draw the lines if the ends are within the plot boundaries
    my $np = $#noiseentry;
    my $r = 1.5*140/$xr;
    $r = ($r < 2.5 ? 2.5 : $r);
    $r = ($r > 6 ? 6 : $r);
    my $rr = 2*$r;   
    my $ibol;
    @pw_point = ();
    for ($i = 0; $i <= $np; $i++) {
	$x = $xleft  + (${$noiseentry[$i]}{'bolnr'}-$xlo) * 
	    ($xright-$xleft)/$xr;
        $val = ${$noiseentry[$i]}{"$col[$plotvar]"};
	$y = $ybottom - ($val-$ylo) * ($ybottom-$ytop)/$yr;
        $pw_point[$i] = -1;
        if ( $x  >= $xleft && $x  <= $xright ) {

	   my $dtag = "d$i";
	   if ( $val  >= $ylo && $val  <= $yhi ) {
	       $pw_point[$i] = 
		   $C->create('oval', $x-$r, $y-$r, $x+$r, $y+$r, -width => 1, 
			      -fill => $pc, -tags => "$dtag");
	   } elsif ($val > $yhi ) {
	      $pw_point[$i] = 
		  $C->create('poly', $x-$r, $ytop+$rr, $x, $ytop, 
			     $x+$r, $ytop+$rr, $x-$r, $ytop+$rr,
			     -width => 1, -outline => 'black',
			     -fill => $cc, -tags => "$dtag");
           } elsif ($val < $ylo) {
	       $pw_point[$i] = 
		   $C->create('poly', $x-$r, $ybottom-$rr, $x, $ybottom, 
			      $x+$r, $ybottom-$rr, $x-$r, $ybottom-$rr, 
			      -width => 1,  -outline => 'black',
			      -fill => $cc, -tags => "$dtag");
	   }

           if ($newplot) {
	       $C->bind("$dtag", '<Any-Enter>' => [sub{item_on("$dtag")}]);
	       $C->bind("$dtag", '<Any-Leave>' => [sub{item_off("$dtag")}]);
	   }
       }
    }

    if ($plotvar == 1) {
      $w_chop->configure( -state => 'disabled');
    } elsif ($plotvar == 2) {
      $w_choperr->configure( -state => 'disabled');
    } elsif ($plotvar == 3) {
      $w_cal->configure( -state => 'disabled');
    } elsif ($plotvar == 4) {
      $w_calerr->configure( -state => 'disabled');
    }
   
    if ($newplot && $plotvar == 2) {
       $y = $ybottom - (105-$ylo) * ($ybottom-$ytop)/$yr;
       $cutoff_line =
       $C->create('line', $xleft, $y, $xright, $y, -width => 1,
		   -fill => $qc);
    }

    if (defined $cutoff_line && defined $flatvar && $flatvar eq $plotvar) {
       $yp = $ybottom - ($cutoff-$ylo) * ($ybottom-$ytop)/$yr;
       $cutoff_line = 
       $C->create('line', $xleft, $yp, $xright, $yp, -width => 2,
		   -fill => $dc);
    }

    if (defined $BW) {
       &plot_lwsw;
    }

    # Allow print area to be selected
    if ($newplot) {
      $C->Tk::bind('<1>' => [sub {area_down(@ARG)}, \%pinfo]);
      $C->Tk::bind('<Double-1>' => [sub {show_lwsw(@ARG)}, \%pinfo]);
      $C->Tk::bind('<B1-Motion>' => [sub {area_move(@ARG)}, \%pinfo]);
      $C->Tk::bind('<2>' => [sub {area_cancel(@ARG)}, \%pinfo]);
      $C->Tk::bind('<3>' => [sub {area_release(@ARG)}, \%pinfo]);
    }

} # end Plot


#----------------------------------------------------------------------
# Calculate cutoff and plot Flat-field
sub show_lwsw {

    my ($w, $pinfo) = @ARG;
    my $e = $w->XEvent;
    ($xp, $yp) = ($e->x, $e->y);

    # Cutoff value and variable
    $cutoff = int(($ybottom-$yp)*$yr/($ybottom-$ytop)+$ylo);
    $flatvar = $plotvar;

    # Make line on noise plot
    $C->delete($cutoff_line) if (defined $BW);
    $cutoff_line =
      $C->create('line', $xleft, $yp, $xright, $yp, -width => 2,
		   -fill => $dc);
    &plot_lwsw
}

#----------------------------------------------------------------------
# Flat-field.
sub plot_lwsw {
    
    my $cbg = "LightCyan3";         # Canvas color
    my $lgpltfont = '-*-Helvetica-Medium-R-Normal--*-180-*-*-*-*-*-*';
    my $smpltfont = '-*-Helvetica-Medium-R-Normal--*-120-*-*-*-*-*-*';

    # Canvas dimensions
    my $lplot   = 740;
    my $mplot   = 390;
    my $lleft   =  10;
    my $lright  = 710;
    my $mtop    =  30;  
    my $mbottom = 360;
    
    # Set flat Id
    $flat_id = "${obsdate}_${run}_${plotvar}";

    # Define alternative mode for Mode button
    $newmode = ( $ffmode eq "names" ? "numbers" : "names" );

    # Create a plot window for the flatfield.
    unless (defined $BW) {
      $BW = $MW->Toplevel(
			  -takefocus => 1
			 );
      $BW->title('Scuba Flat-Field');
    }

    # Create a canvas 
    if (defined $BC) {
	    $BC->delete('all');
    } else {

      # Create top menu bar frame
      $BMB = $BW->Frame(
		     -borderwidth => 0
		    );
      $BMB->pack(-side => 'top', -fill => 'x');


      # Add "Dismiss" button on right above canvas
      my $bwdismiss = $BMB->Button(
				-text         => 'Dismiss',
				-command      => sub{
				  $C->delete($cutoff_line);
				  destroy $BW; 
				  $BW = $BC= $flatvar = undef}
			       );
      $BW->Advertise('Dismiss_button' => $bwdismiss);
      $bwdismiss->pack(-side=>'right');

      # Add "Mode" menubutton on left above canvas
      $bwmode = $BMB->Button(
			     -text         => "$newmode",
			     -command      => sub{
			       $bwmode->configure(-text => "$ffmode");
			       $ffmode = $newmode;
			       &plot_lwsw;
			     }
			    );
      $BW->Advertise('Mode_button' => $bwmode);
      $bwmode->pack(-side=>'left');

      $BC = $BW->Canvas(
			-relief => 'groove',
			-border => 3, 
			-background => 'White',
			-width  => "$lplot", 
			-height => "$mplot",
			-cursor => 'top_left_arrow',
		       );
      $BW->Advertise('canvas' => $BC);
      $BC->pack(-side => 'top', -fill => 'x');
    }

    # flatfield scaling
    my $llo = -80.0;
    my $lhi = 240.0;
    my $mlo = -80.0;
    my $mhi = 80.0;
        
    # Plot range 
    my $lr = ($lhi-$llo);
    my $mr = ($mhi-$mlo);
    
    # Title and arrays
    $BC->create('text', $lplot/2-20, $mtop-5, 
		-text => 'Bolometer Flat-Field', 
		-font => $lgpltfont, -fill => $tc);
    $BC->create('text', $lleft+30, $mtop+15, 
		-text => "SW", -font => $lgpltfont, -fill => $tc);
    $BC->create('text', $lright-20, $mtop+15, 
		-text => "LW", -font => $lgpltfont, -fill => $tc);

    # Draw the bolometers
    my ($i, $x, $y, $r, $ibol, $val, $loff, $font, $color);
    my $np = $#noiseentry;
    @bw_point = ();
    for ($i = 0; $i <= $np; $i++) {
      
      $val  = ${$noiseentry[$i]}{"$col[$flatvar]"};
      $ibol = ${$noiseentry[$i]}{"$col[0]"};
      my ($x,$y) = split(/ /,$xybol{"$ibol"},2);

      $bw_point[$i] = -1;

      if ($ibol =~ /^[G-I]\d/) {
	$r = 26;
	$loff = 0;
	$font = $lgpltfont;
      } else {
	$r = 13;
	$loff = 160;
	$font = $smpltfont;
      }

      if ( $val < $cutoff) {
	$color = $bc;
      } else {
	$color = $dc;
      }

      if ($ffmode eq "numbers") {
          $ibol = ${$noiseentry[$i]}{'bolnr'};
          $ibol -= 100 if ($ibol > 100);
      }

      # Need to go backwards in X to get 'normal' picture
      $x = $lright  - ($x+$loff-$llo) * ($lright-$lleft)/$lr;
      $y = $mbottom - ($y-$mlo) * ($mbottom-$mtop)/$mr;
      if ( $x >= $lleft && $x <= $lright &&
	   $y >= $mtop  && $y <= $mbottom ) {
	my $dtag = "d$i";
	$bw_point[$i] = 
	    $BC->create('oval', $x-$r, $y-$r, $x+$r, $y+$r, -width => 1,
			-fill => $color, -tags => "$dtag");
	$BC->create('text', $x, $y, -text => "$ibol", 
		    -font => $font, -fill => $cc, -tags => "$dtag");
	$BC->bind("$dtag", '<Any-Enter>' => [sub{item_on("$dtag")}]);
	$BC->bind("$dtag", '<Any-Leave>' => [sub{item_off("$dtag")}]);
      }
    }

    $BC->create('text', $xleft+100, $mbottom, 
		-text => "Gold: $col[$flatvar] >= $cutoff",
		-font => $lgpltfont, -fill => $tc);
    $BC->create('text', $xleft+100, $mbottom+25,
		-text => "$run:$source",   
                -font => $lgpltfont, -fill => $tc);
    

} # end plot_lwsw

#----------------------------------------------------------------------------
# Private methods.

sub item_on {    
    my $i   = substr("$ARG[0]",1,999);
    my $cbol  = ${$noiseentry[$i]}{"$col[0]"};
    my $ibol  = $bol{"$cbol"};
    $ibol -= 100 if ($ibol > 100);
    my $val = ${$noiseentry[$i]}{"$col[$plotvar]"};
    $C->itemconfigure($pw_point[$i], -fill => $qc) if ($pw_point[$i] != -1);
    if (defined $BW && $bw_point[$i] != -1) {
       $BC->itemconfigure($bw_point[$i], -fill => $qc) 
    };
    $C->delete($iteminfo) if (defined $iteminfo);
    $iteminfo = $C->create('text', $xplot-100, 15, 
			   -text => "($cbol:$ibol, $val)",
			   -font => $plotfont, -fill => $cc);
  }

sub item_off {
    
    my $i   = substr("$ARG[0]",1,999);
    my $val = ${$noiseentry[$i]}{"$col[$plotvar]"};
    my $offc = $pc;
    $offc = $cc if ($val < $ylo || $val > $yhi);
    $C->delete($iteminfo);
    $C->itemconfigure($pw_point[$i], -fill => $offc) if ($pw_point[$i] != -1);
    if (defined $BW && $bw_point[$i] != -1) {
	my $val = ${$noiseentry[$i]}{"$col[$flatvar]"};
	if ($val < $cutoff ) {
	    $BC->itemconfigure($bw_point[$i], -fill => $bc)
       } else {
	   $BC->itemconfigure($bw_point[$i], -fill => $dc)
       }
    };
#    $iteminfo = $C->create('text', $xplot-125, 25, -text => "$defmess",
#			   -font => $listfont, -fill => $cc);

  }

sub area_down {

    my($w, $pinfo) = @ARG;

    $C->delete($iteminfo) if (defined $iteminfo);
    $iteminfo = $C->create('text', $xplot-100, 22, -text =>
       "Left:   Area define\nRight:  Replot area\nMiddle: Cancel",
			   -font => $listfont, -fill => $cc);

    my $e = $w->XEvent;
    my($x, $y) = ($e->x, $e->y);
    $pinfo->{'areaX1'} = $x;
    $pinfo->{'areaY1'} = $y;
    $pinfo->{'areaX2'} = -1;
    $pinfo->{'areaY2'} = -1;
    eval {local $SIG{'__DIE__'}; $w->delete('area');};

} # end area_down

sub area_move {

    my($w, $pinfo) = @ARG;

    my $e = $w->XEvent;
    my($x, $y) = ($e->x, $e->y);
    if($x != $pinfo->{'areaX1'} && $y != $pinfo->{'areaY1'}) {
      eval {local $SIG{'__DIE__'}; $w->delete('area');};
      $w->addtag('area','withtag',$w->create('rect',$pinfo->{'areaX1'},
                                           $pinfo->{'areaY1'},$x,$y));
      $pinfo->{'areaX2'} = $x;
      $pinfo->{'areaY2'} = $y;
    }

} # end area_move

sub area_release {

    my($w, $pinfo) = @ARG;

    $C->delete($iteminfo) if (defined $iteminfo);
    $iteminfo = $C->create('text', $xplot-125, 25, -text => "$defmess",
			   -font => $listfont, -fill => $cc);
    if($pinfo->{'areaX1'} != $pinfo->{'areaX2'} && 
       $pinfo->{'areaY1'} != $pinfo->{'areaY2'} &&
       $pinfo->{'areaX2'} != -1 && $pinfo->{'areaY2'} != -1 ) {
      $alo = ($pinfo->{'areaX1'}-$xleft)  *$xr/($xright-$xleft)+$xlo;
      $ahi = ($pinfo->{'areaX2'}-$xleft)  *$xr/($xright-$xleft)+$xlo;
      $blo = ($ybottom-$pinfo->{'areaY1'})*$yr/($ybottom-$ytop)+$ylo;
      $bhi = ($ybottom-$pinfo->{'areaY2'})*$yr/($ybottom-$ytop)+$ylo;
      $w->delete('area');
      $newplot = 1;
      &plot;
                          
    }

} # end area_release

sub area_cancel {

    my($w, $pinfo) = @ARG;

    $C->delete($iteminfo) if (defined $iteminfo);
    $iteminfo = $C->create('text', $xplot-125, 25, -text => "$defmess",
			   -font => $listfont, -fill => $cc);
    $pinfo{'lastX'} = 0;
    $pinfo{'lastY'} = 0;
    $pinfo{'areaX1'} = -1;
    $pinfo{'areaY1'} = -1;
    $pinfo{'areaY2'} = -1;
    $pinfo{'areaX2'} = -1;
    $w->delete('area');
                          
} # end area_relase

sub area_save {
    
    my($w, $pinfo) = @ARG;
    
    my($x1, $x2, $y1, $y2, $a);
    
    if($pinfo->{'areaX2'} != -1) {
	($x1, $x2, $y1, $y2) = 
	  @$pinfo{'areaX1', 'areaX2', 'areaY1', 'areaY2'}; # slice !
	($x1, $x2) = @$pinfo{'areaX2', 'areaX1'} if $x2 <= $x1;
	($y1, $y2) = @$pinfo{'areaY2', 'areaY1'} if $y2 <= $y1;
	$a = $w->postscript('-x' => $x1, '-y' => $y1,
			    -width => $x2 - $x1, -height => $y2 - $y1);
    } else {
	$a = $w->postscript;
    }
    
    $SIG{'PIPE'} = sub {};
    open(LPR, "$pinfo->{'prcmd'}")
      || do { warn "Error opening $pinfo->{'prcmd'}"; return };
    print LPR $a;
    close(LPR) || do {warn "Error closing $pinfo->{'prcmd'}"; };

} # end area_save

#----------------------------------------------------------------------
# We write good unix utilities ergo the -v and -h flags work


# ----------------------------------------------------------------------
# Figure out semester and previous
sub find_sem {

   my $obsdate = shift;

   print "DEBUG: find_sem obsdate is ${obsdate}\n" if ($debug);


   my $sem = "unknown";
   my $year = substr($obsdate,2,2);
   my $pyear = substr(($obsdate-10000),2,2);
   my $monthday= substr($obsdate,4,4);

   if ( $monthday > 201 && $monthday < 802 ) {
     $sem = "m${year}a";
   } elsif  ( $monthday < 202 ) {
     $sem = "m${pyear}b";
   } else {
     $sem = "m${year}b";
   }

   print "DEBUG: ..... is mapped to semester ${sem}\n" if ($debug);

   return $sem;

}

 
sub ver_text {

    print "\n\t$prog --- version $version\n";
    print "\tThis utility plots Scuba Noise files in a X-window\n";
    print "\tContact Remo Tilanus (rpt\@jach.hawaii.edu) for more information\n\n";

}
 
sub help_text {

    print "\n\tName: $prog - Plot Scuba Noise files\n\n";
    print "\tVersion: $version\n\n";
    print "\tUse:  $prog  [-v | -h | -d] [obsdate [runnr]]\n\n";
    print "\t\t-h: \tthis help\n\n";
    print "\t\t-v: \tversion\n\n";
    print "\t\t-d: \tswitch on debug output\n\n\n";
    print "\t\tobsdate:\tobservation directory/date e.g. 19980210\n\n";
    print "\t\trunnr:\tscuba observation number of the noise measurement\n\n\n";
    print "\tThe routine will try to locate the noise file at the JAC first,\n";
    print "\tbut if it can not find the file, it wil look on the summit VAX disks.\n";
    print "\tIf obsdate and/or runnr are omitted the user will be prompted\n";
    print "\tIf obsdate and presented with a choice of run numbers.\n\n\n";
}

sub fill_bol {

%bol = ('A1', 1, 'A2', 2, 'A3', 3, 'A4', 4, 'A5', 5, 'A6', 6,
        'A7', 7, 'A8', 8, 'A9', 9, 'A10', 10, 'A11', 11, 'A12', 12,
        'A13', 13, 'A14', 14, 'A15', 15, 'A16', 16, 'B1', 17, 'B2', 18,
        'B3', 19, 'B4', 20, 'B5', 21, 'B6', 22, 'B7', 23, 'B8', 24,
        'B9', 25, 'B10', 26, 'B11', 27, 'B12', 28, 'B13', 29, 'B14', 30,
        'B15', 31, 'B16', 32, 'C1', 33, 'C2', 34, 'C3', 35, 'C4', 36,
        'C5', 37, 'C6', 38, 'C7', 39, 'C8', 40, 'C9', 41, 'C10', 42,
        'C11', 43, 'C12', 44, 'C13', 45, 'C14', 46, 'C15', 47, 'C16', 48,
        'D1', 49, 'D2', 50, 'D3', 51, 'D4', 52, 'D5', 53, 'D6', 54,
        'D7', 55, 'D8', 56, 'D9', 57, 'D10', 58, 'D11', 59, 'D12', 60,
        'D13', 61, 'D14', 62, 'D15', 63, 'D16', 64, 'E1', 65, 'E2', 66,
        'E3', 67, 'E4', 68, 'E5', 69, 'E6', 70, 'E7', 71, 'E8', 72,
        'E9', 73, 'E10', 74, 'E11', 75, 'E12', 76, 'E13', 77, 'E14', 78,
        'E15', 79, 'E16', 80, 'F1', 81, 'F2', 82, 'F3', 83, 'F4', 84,
        'F5', 85, 'F6', 86, 'F7', 87, 'F8', 88, 'F9', 89, 'F10', 90,
        'F11', 91,
        'G1', 101, 'G2', 102, 'G3', 103, 'G4', 104, 'G7', 105, 'G8', 106, 
        'G9', 107, 'G10',108, 'G11', 109, 'G13', 110, 'G14', 111, 
        'G15', 112, 'G16', 113, 'H1', 114, 'H2', 115, 'H4', 116, 
        'H5', 117, 'H6', 118, 'H7', 119, 'H8', 120, 'H9', 121, 
        'H10', 122, 'H11', 123, 'H12', 124, 'H13', 125, 'H14', 126, 
        'H15', 127, 'H16', 128, 'I1', 129, 'I2', 130, 'I3', 131,
        'I4', 132, 'I5', 133, 'I6', 134, 'I7', 135, 'I8', 136, 'I9', 137);

%xybol =  (
     'A1', "0.5708E+02 -0.2814E+02", 'A2', "0.4590E+02 -0.3591E+02",
     'A3', "0.3615E+02 -0.4146E+02", 'A4', "0.2464E+02 -0.4962E+02",
     'A5', "0.1455E+02 -0.5628E+02", 'A6', "0.3620E+01 -0.6315E+02",
     'A7', "0.5638E+02 -0.1661E+02", 'A8', "0.4508E+02 -0.2315E+02",
     'A9', "0.3495E+02 -0.3012E+02", 'A10', "0.2240E+02 -0.3762E+02",
     'A11', "0.1314E+02 -0.4396E+02", 'A12', "0.2812E+01 -0.5070E+02",
     'A13', "-0.7590E+01 -0.5808E+02", 'A14', "0.5559E+02 -0.4683E+01",
     'A15', "0.4502E+02 -0.1081E+02", 'A16', "0.3296E+02 -0.1807E+02",
     'B1', "0.2224E+02 -0.2456E+02", 'B2', "0.1165E+02 -0.3120E+02",
     'B3', "0.2000E+01 -0.3855E+02", 'B4', "-0.9089E+01 -0.4490E+02",
     'B5', "-0.1951E+02 -0.5160E+02", 'B6', "0.5585E+02 0.7780E+01",
     'B7', "0.4489E+02 0.9322E+00", 'B8', "0.3283E+02 -0.5420E+01",
     'B9', "0.2169E+02 -0.1181E+02", 'B10', "0.1166E+02 -0.1921E+02",
     'B11', "0.7480E+00 -0.2610E+02", 'B12', "-0.1013E+02 -0.3228E+02",
     'B13', "-0.2043E+02 -0.3952E+02", 'B14', "-0.2907E+02 -0.4586E+02",
     'B15', "0.5681E+02 0.2020E+02", 'B16', "0.4512E+02 0.1323E+02",
     'C1', "0.3315E+02 0.7096E+01", 'C2', "0.2194E+02 0.7400E+00",
     'C3', "0.1091E+02 -0.6110E+01", 'C4', "0.2756E+00 -0.1215E+02",
     'C5', "-0.1075E+02 -0.1977E+02", 'C6', "-0.2075E+02 -0.2666E+02",
     'C7', "-0.3146E+02 -0.3298E+02", 'C8', "-0.4124E+02 -0.4042E+02",
     'C9', "0.5849E+02 0.3141E+02", 'C10', "0.4631E+02 0.2581E+02",
     'C11', "0.3388E+02 0.2000E+02", 'C12', "0.2248E+02 0.1267E+02",
     'C13', "0.1116E+02 0.6479E+01", 'C14', "0.0000E+00 0.0000E+00",
     'C15', "-0.1116E+02 -0.6479E+01", 'C16', "-0.2215E+02 -0.1332E+02",
     'D1', "-0.3139E+02 -0.2045E+02", 'D2', "-0.4220E+02 -0.2734E+02",
     'D3', "-0.5298E+02 -0.3271E+02", 'D4', "0.4815E+02 0.3794E+02",
