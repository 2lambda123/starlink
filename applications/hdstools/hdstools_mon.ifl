monolith hdstools
interface HCOPY

   helplib '$HDSTOOLS_HELP'

   parameter INP
      type 'UNIV'
      position 1
      prompt 'Object to copy'
      help 'Full specification of input object eg. file.next.object'
      helpkey '*'
   endparameter

   parameter OUT
      type '_CHAR'
      position 2
      prompt 'Object to copy to'
      help 'Full name of output object'
      helpkey '*'
   endparameter

endinterface
interface HCREATE                  

   helplib '$HDSTOOLS_HELP'

   parameter INP                   
      type 'UNIV'                  
      position 1    
      prompt 'Object name'
      help 'Full path name of new object to be created'
      helpkey '*'
      association '->GLOBAL.HDSOBJ'  
   endparameter                            

   parameter TYPE                           
      type '_CHAR'                           
      position 2                             
      prompt 'Object type'                   
      help 'Type of data object to be created eg _REAL, SPECTRUM etc'
      helpkey '*'
   endparameter                             

   parameter DIMS
      position 3
      type '_INTEGER'                        
      vpath 'DEFAULT'
      default 0
      prompt 'Dimensions'                    
      help 'Dimensions of object - 0 for scalar -  128,128 for 2-D etc'
      helpkey '*'
   endparameter                             

endinterface                               
interface HDELETE

   helplib 'HDSTOOLS_HELP'

   parameter INP  
      type 	'UNIV'  
      position 	1   
      prompt	'Object to be deleted'
      help	'Name of object to be deleted e.g. top.next.bottom'
   endparameter

endinterface  
interface HDIR      

   helplib '$HDSTOOLS_HELP'

   parameter INP    
      type UNIV
      position 1    
      ppath 'GLOBAL'
      prompt 'Object name'
      help 'Full name of object whose components are to be listed'
      helpkey '*'
      association '<->GLOBAL.HDSOBJ'
   endparameter

   parameter DEV
      position 2
      type '_CHAR'
      vpath 'default'
      default 'TERMINAL'
      prompt 'Output to'
      help 'Valid responses : TERMINAL(default),PRINTER,OLDFILE,NEWFILE or filename'
      helpkey '*'
   endparameter

endinterface  
interface HDISPLAY              

   helplib '$HDSTOOLS_HELP'

   parameter INP
      type UNIV
      position 1                
      ppath 'GLOBAL'       
      prompt 'Object name'
      help 'Full path name of object to be displayed'
      helpkey '*'
      association '<->GLOBAL.HDSOBJ'
   endparameter

   parameter DEV
      position 2
      type '_CHAR'
      vpath 'default'
      default 'TERMINAL'
      prompt 'Output to'
      help 'Valid responses are :TERMINAL(default),PRINTER,OLDFILE,NEWFILE or filename'
      helpkey '*'
   endparameter

   parameter WIDTH
      type '_INTEGER'
      vpath 'DEFAULT'
      default !
      prompt 'Output width'
      help 'Allows you to overide default width of 80 for a terminal'
      helpkey '*'
   endparameter

   parameter SLICE
      type '_CHAR'
      vpath 'DEFAULT'
      default '*'                                                               
      prompt 'Slice'                                                         
      help 'Should have format: i1:i2,j1:j2'
      helpkey '*'
   endparameter

   parameter FMT
      type '_CHAR'
      vpath 'default'                                                      
      default !
      prompt 'Output format'
      help 'FORTRAN format code eg F10.5'
      helpkey '*'
   endparameter

endinterface
interface HFILL

   helplib '$HDSTOOLS_HELP'

   parameter INP
      type 'UNIV'
      position 1
      ppath 'GLOBAL'
      prompt 'Object name'
      help 'Full path name of object to be filled with specified value'
      helpkey '*'
      association '<->GLOBAL.HDSOBJ'
   endparameter

   parameter VALUE
      type 'UNIV'
      position 2
      prompt 'Value'
      help 'Value with which object is to be filled'
      helpkey '*'
   endparameter

endinterface
interface HGET

   helplib '$HDSTOOLS_HELP'

   parameter INP
      position 1
      type UNIV
      vpath 'PROMPT'
      ppath 'GLOBAL'
      prompt 'Object name'
      help 'Full path name of object to be displayed'
      helpkey '*'
      association '<->GLOBAL.HDSOBJ'
   endparameter

   parameter ITEM
      position 2
      type '_CHAR'
      default 'VALUE'
      vpath 'PROMPT'
      ppath 'DEFAULT'
      prompt 'ATTRIBUTE'
      help 'Enter one of PRIM, STRUC, NDIM, DIMS, NELM, TYP, VAL, MIN or MAX'
      helpkey '*'
   endparameter

   parameter ATTR
      type '_CHAR'
      position 3
      vpath 'INTERNAL,NOPROMPT'
      helpkey '*'
   endparameter

   parameter INDEX
      type '_INTEGER'
      position 4
      vpath 'INTERNAL,NOPROMPT'
      helpkey '*'
   endparameter

   parameter ECHO 
      type '_LOGICAL'
      default Y
      vpath 'DEFAULT,PROMPT'
      ppath 'DEFAULT'
      prompt 'Echo attribute value to console?'
      help 'Useful in scripts'
      helpkey '*'
   endparameter

   parameter VERSION
      type '_LOGICAL'
      default N
      vpath 'DEFAULT,PROMPT'
      ppath 'DEFAULT'
      prompt 'Output version number?'
      help 'Useful in scripts'
      helpkey '*'
   endparameter

endinterface
