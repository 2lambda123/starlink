#!/bin/sh
# E.S.O. - VLT project/ ESO Archive 
# "@(#) $Id: makelinks,v 1.2 1998/12/23 12:33:18 abrighto Exp $"
#
# script to make some links used during development
#
# usage: makelinks
#
# who             when       what
# --------------  --------   ----------------------------------------
# Allan Brighton  14 Nov 96  Created


if [ ! -d ./gaia/library ]
then
	echo "$0: you should be one level above the gaia directory"
	exit 1
fi

echo "making links in skycat/gaia/library..."
cd gaia/library
make index
for i in demos 
do
  rm -f $i
  ln -s ../$i .
done

