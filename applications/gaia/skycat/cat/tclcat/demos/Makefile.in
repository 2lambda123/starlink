INSTALL      = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
CAT_DIR      = @CAT_DIR@
BINDIR       = @BINDIR@
RM           = rm -f
SHELL        = /bin/sh

# starter shell script
SCRIPTS      = cat.sh

# symbolic links to install
TCL_LINKS    = astrocat 

# other files to install
FILES        = astrocat.tcl 

all: tcl_links

# make links to the startup script for starting the Tcl applications
tcl_links:
	@for i in $(TCL_LINKS); do rm -f $$i; ln -s cat.sh $$i; done

All: 
	cd ..; $(MAKE)

install-top:
	@test -d $(BINDIR) || mkdir $(BINDIR) 
	@test -d $(CAT_DIR) || mkdir $(CAT_DIR) 
	@test -d $(CAT_DIR)/demos || mkdir $(CAT_DIR)/demos

install: install-top
	@set -x; for i in $(SCRIPTS) ; do \
	    $(INSTALL_DATA) -m 775 $$i $(CAT_DIR)/demos ; \
	done 
	@set -x; for i in $(FILES) ; do \
	    $(INSTALL_DATA) -m 664 $$i $(CAT_DIR)/demos ; \
	done 
	@set -x; for i in $(TCL_LINKS); do \
	    rm -f $(BINDIR)/$$i $(CAT_DIR)/demos/$$i; \
	    (cd $(CAT_DIR)/demos; ln -s cat.sh $$i) ; \
	    (cd $(BINDIR); ln -s ../lib/cat/demos/$$i $$i) ; \
	done

clean:
	$(RM) *\~ "#"* core

depend:

distclean: clean
	rm -f Makefile cat.sh

man:
