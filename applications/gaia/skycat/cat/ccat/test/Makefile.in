CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
DEPEND_TARGET	= @DEPEND_TARGET@

TCLUTIL_LIB     = @TCLUTIL_LIB_STATIC@
ASTROTCL_LIB     = @ASTROTCL_LIB_STATIC@

SRCS 		=  tastroCatalog.c tastroImage.c

OBJS 		=  tastroCatalog.o tastroImage.o

PROGS 		=  tastroCatalog tastroImage

# Take include files from the build dirs, if present
BUILD_INCLUDES  = @TCLUTIL_BUILD_INCLUDES@ \
		  @ASTROTCL_BUILD_INCLUDES@

INCLUDES	= -I../include \
		  -I../../astrocat/include \
		  $(BUILD_INCLUDES) \
		  -I$(TOPDIR)/include/astrotcl \
		  -I$(TOPDIR)/include/tclutil

CC_SWITCHES	= $(CFLAGS) $(DEFINES) $(INCLUDES)

LIBRARIES       = ../lib/libcastrocat.a \
		  ../../astrocat/lib/libastrocat.a \
		  $(ASTROTCL_LIB) \
		  $(TCLUTIL_LIB) 

DEPEND_FLAGS    = $(CC_SWITCHES) @CXX_INCLUDE@
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f
EXTRA_LIBS      = @LIBS@

all: 

test: $(PROGS)

lib:
	@cd ../src; $(MAKE)

alltests: $(PROGS)
	-@for i in $(PROGS); do \
		echo "testing $$i:" ;\
		$$i > $$i.result ;\
		cmp $$i.result $$i.ok || echo "*** $$i: test failed: see $$i.result" ;\
	done

# accept all test results
allok:
	for i in *.result; do cp $$i `basename $$i .result`.ok; done

All:
	cd ../..; $(MAKE); $(MAKE)

install:

clean:
	$(RM) $(PROGS) $(OBJS) *.result *\~ "#"* *.o

distclean: clean depclean
	rm -f Makefile	

tastroCatalog: lib main.o tastroCatalog.o 
	$(CXX) $(CC_SWITCHES) -o $@ main.o $@.o $(LIBRARIES) $(EXTRA_LIBS)	
	-$@ > $@.result
	-@if cmp $@.result $@.ok; \
	 then echo "$@: PASSED" ; \
	 else echo "*** $@: TEST FAILED: see $@.result"; \
	 fi

tastroImage: lib main.o tastroImage.o
	$(CXX) $(CC_SWITCHES) -o $@ main.o $@.o $(LIBRARIES) $(EXTRA_LIBS)	
	-$@ > $@.result
	-@if cmp $@.result $@.ok; \
	 then echo "$@: PASSED" ; \
	 else echo "*** $@: TEST FAILED: see $@.result"; \
	 fi

.SUFFIXES: .C
.c.o:
	$(CC) -c $(CC_SWITCHES) $<

.C.o:
	$(CXX) -c $(CC_SWITCHES) $<

man:

include ../../depend.mk

