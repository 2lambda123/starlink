#!/bin/sh
# E.S.O. - VLT project 
# "@(#) $Id: rmlinks,v 1.1.1.1 2002/04/04 20:11:45 brighton Exp $"
#
# script to remove links before checking in with cmm
#
# usage: cd CATDIR; sh rmlinks
#
# who             when      what
# --------------  --------  ----------------------------------------
# Allan Brighton  22 Nov 97  Created

if [ ! -d ./tclcat/library ]
then
	echo "$0: you should be one level above the tclcat directory"
	exit 1
fi

find . -type l -print -exec rm -f {} \; | tee .linklog
