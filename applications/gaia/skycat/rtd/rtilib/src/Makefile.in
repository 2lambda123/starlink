SRCS =	LookupTable.C ImageData.C CompoundImageData.C ByteImageData.C \
	XImageData.C ShortImageData.C UShortImageData.C LongImageData.C \
	FloatImageData.C DoubleImageData.C NativeImageData.C BiasData.C \
	iqefunc.c mrqfit.c indexx.c sort.c gaussj.c covsrt.c \
	histdist.c histeql.c histlist.c histmap.c histscan.c histzero.c saoutil.c

OBJS =	LookupTable.o ImageData.o CompoundImageData.o ByteImageData.o \
	XImageData.o ShortImageData.o UShortImageData.o LongImageData.o \
	FloatImageData.o DoubleImageData.o NativeImageData.o BiasData.o \
	iqefunc.o mrqfit.o indexx.o sort.o gaussj.o covsrt.o \
	histdist.o histeql.o histlist.o histmap.o histscan.o histzero.o saoutil.o

libname	= ../lib/librti.a

# note: we only include rtdimg below for error.h
INCLUDES =	-I../include \
		-I../../rtdimg/include \
		$(BUILD_INCLUDES) \
		-I$(TOPDIR)/include/astrotcl \
		-I$(TOPDIR)/include/tclutil \
		$(X_INCLUDE)


do_all: dirs $(libname) 

do_install:

$(libname): $(OBJS)
	$(RM) $@
	$(AR) $@ $(OBJS)
	$(RANLIB) $@

dirs:
	$(AT)test -d ../lib || mkdir ../lib

include ../../makefile.mk
include ../../depend.mk
