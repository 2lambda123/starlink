# 	Makefile for RTD Remote Access library
# ------------------------------------------------------------------------

SRCS 		= rtdRemote.c
OBJS 		= rtdRemote.o

libname  	= ../lib/librtdRemote.a

INCLUDES	= -I../include

do_all: dirs $(libname)

do_install:

$(libname): $(OBJS)
	$(RM) $@
	$(AR) $@ $(OBJS)
	$(RANLIB) $@

dirs:
	test -d ../lib || mkdir ../lib

do_clean:
	$(RM) $(OBJS) $(libname) *\~ "#"*

do_distclean: clean depclean
	rm -f Makefile	

include ../../makefile.mk
include ../../depend.mk

