SRCS 		=  trtdRemote.c 

OBJS 		=  trtdRemote.o

PROGS 		=  trtdRemote

INCLUDES	= -I../include

CC_SWITCHES	= $(DEFINES) $(INCLUDES) $(CFLAGS)

LIBRARIES       = ../lib/librtdRemote.a \
	          $(EXTRA_LIBS)

DEPEND_FLAGS    = $(CC_SWITCHES)


test: $(PROGS)

do_all:
do_depend:
do_install:

lib:
	@cd ../src; $(MAKE)

do_clean: depclean
	$(RM) $(PROGS) $(OBJS) *\~ "#"* *.o

do_distclean: clean depclean
	rm -f Makefile	

trtdRemote: lib trtdRemote.o 
	$(CC) $(CC_SWITCHES) -o $@ $@.o $(LIBRARIES)
	@echo "start $@ by hand (rtd should be running first)"	

include ../../makefile.mk
include ../../depend.mk

