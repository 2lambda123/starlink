#!/bin/sh
# E.S.O. - VLT project 
# "@(#) $Id: rmlinks,v 1.2 2005/02/02 01:43:03 brighton Exp $"
#
# script to remove links before checking in with cmm
#
# usage: cd RTDDIR; sh rmlinks
#
# who             when      what
# --------------  --------  ----------------------------------------
# Allan Brighton  05/12/95  Created
# pbiereic        01/04/97  Changed according to new directory structure

if [ ! -d ./rtdimg/library ]
then
	echo "$0: you should be one level above the rtdimg directory"
	exit 1
fi

find . -type l -print -exec rm -f {} \; | tee .linklog
