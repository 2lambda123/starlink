# ------------------------------------------------------------------------
# 	Makefile for RTD images directory
# ------------------------------------------------------------------------
FILES        = *.*fits


install-top:
	-@test -d $(RTD_DIR)/images || mkdir $(RTD_DIR)/images

install-files: install-top
	-$(AT)for i in $(FILES) ; do \
	    test -f "$$i" && $(INSTALL_DATA) $$i $(RTD_DIR)/images ; \
	done 

do_install: install-files

include ../../makefile.mk

