# ------------------------------------------------------------------------
# 	Makefile for RTD images directory
# ------------------------------------------------------------------------

INSTALL      = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
RTD_DIR      = @RTD_DIR@
RM           = rm -f
SHELL        = /bin/sh
FILES        = *.*fits
srcdir	     = @srcdir@

all:

All: 
	cd ..; $(MAKE)

install-top:
	-@test -d $(RTD_DIR)/images || mkdir $(RTD_DIR)/images

install-files: install-top
	-@set -x; for i in $(FILES) ; do \
	    test -f "$$i" && $(INSTALL_DATA) $$i $(RTD_DIR)/images ; \
	done 

install: install-files

clean:
	$(RM) *\~ "#"* core

depend:

distclean: clean
	rm -f Makefile	

man:

