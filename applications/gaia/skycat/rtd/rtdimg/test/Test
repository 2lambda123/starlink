#!/bin/sh
#\
test -f ../demos/rtd_env.sh && . ../demos/rtd_env.sh
#\
P=$PWD; DIRN=`dirname $0`; cd $DIRN; XP=`pwd`; cd $P
#\
if [ -z "$RTD_LIBRARY" ] ; then
#\
   WISH=rtdimage_wish; L=`dirname $XP`; RTD_LIBRARY="$L/lib/rtd" ; export RTD_LIBRARY
#\
   else WISH=$RTD_LIBRARY/../bin/rtdimage_wish
#\
fi
#\
LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/home/pdraper/starlink_cvs/source/applications/gaia/built/lib:/home/pdraper/starlink_cvs/star/lib:/home/pdraper/starlink_cvs/star/lib/itcl:/usr/X11R6/lib"
#\
exec $WISH "$0" ${1+"$@"}
# --------------------------------------------------
set n 0
foreach testfile [glob t*.tcl] {
    if {"$testfile" != "test.tcl"} {
	incr n
	set name [string range [file rootname $testfile] 1 end]
	pack [button .b$n -text $name -command "exec ../bin/rtdimage_wish $testfile &"] \
	    -side top -fill x
    }
}
