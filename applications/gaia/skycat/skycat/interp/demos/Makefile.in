INSTALL      = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
SKYCAT_DIR   = @SKYCAT_DIR@
BINDIR       = @BINDIR@
RM           = rm -f
SHELL        = /bin/sh

# starter shell script
SCRIPTS      = skycat.sh

# symbolic links to install
TCL_LINKS        = skycat

# other files to install
FILES        = skycat.tcl tclIndex

all: tcl_links

# make links to the startup script for starting the Tcl applications
tcl_links:
	@for i in $(TCL_LINKS); do rm -f $$i; ln -s skycat.sh $$i; done

All: 
	cd ..; $(MAKE)

install-top:
	@test -d $(BINDIR) || mkdir $(BINDIR) 
	@test -d $(SKYCAT_DIR) || mkdir $(SKYCAT_DIR) 
	@test -d $(SKYCAT_DIR)/demos || mkdir $(SKYCAT_DIR)/demos

install: install-top
	@set -x; for i in $(SCRIPTS) ; do \
	    $(INSTALL_DATA) -m 775 $$i $(SKYCAT_DIR)/demos ; \
	done 
	@set -x; for i in $(FILES) ; do \
	    $(INSTALL_DATA) -m 664 $$i $(SKYCAT_DIR)/demos ; \
	done 
	@set -x; for i in $(TCL_LINKS); do \
	    rm -f $(BINDIR)/$$i $(SKYCAT_DIR)/demos/$$i; \
	    (cd $(SKYCAT_DIR)/demos; ln -s skycat.sh $$i) ; \
	    (cd $(BINDIR); ln -s ../lib/skycat/demos/$$i $$i) ; \
	done

clean:
	$(RM) *\~ "#"* core

depend:

distclean: clean
	rm -f Makefile skycat.sh

man:

index tclIndex:
	../library/mkIndex.tcl

