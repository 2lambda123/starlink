CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CXXDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
TCLUTIL_LIB     = @TCLUTIL_LIB_STATIC@
DEPEND_TARGET	= @DEPEND_TARGET@

SRCS 		=  tFitsIO.C

OBJS 		=  tFitsIO.o

PROGS 		=  tFitsIO

BUILD_INCLUDES  = @TCLUTIL_BUILD_INCLUDES@

INCLUDES	= -I../include \
	          -I../../compress/include \
	          -I../../wcslib/include \
		  $(BUILD_INCLUDES) \
		  -I$(TOPDIR)/include/tclutil

CC_SWITCHES	= $(CFLAGS) $(DEFINES) $(INCLUDES)

LIBRARIES       = ../lib/libimageio.a \
		  ../../compress/lib/libcompress.a \
		  ../../wcslib/lib/libwcslib.a \
		  $(TCLUTIL_LIB)

EXTRA_LIBS      = @LIBS@

DEPEND_FLAGS    = $(CC_SWITCHES)
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f

all: 

test: $(PROGS)

lib:
	@cd ../src; $(MAKE)

All:
	cd ../..; $(MAKE); $(MAKE)

install:

clean: 
	$(RM) $(PROGS) $(OBJS) *\~ "#"* *.o

distclean: clean
	echo > make.dep
	rm -f Makefile	

tFitsIO: tFitsIO.o $(LIBRARIES)
	$(CXX) $(CC_SWITCHES) -o $@ $@.o $(LIBRARIES) $(EXTRA_LIBS)	
	-$@ > $@.result
	-@if cmp $@.result $@.ok; \
	 then echo "$@: PASSED" ; \
	 else echo "*** $@: TEST FAILED: see $@.result"; \
	 fi

.SUFFIXES: .C
.c.o:
	$(CC) -c $(CC_SWITCHES) $<

.C.o:
	$(CXX) -c $(CC_SWITCHES) $<

man:

include ../../depend.mk
