INSTALL      = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
ASTROTCL_DIR  = @ASTROTCL_DIR@
BINDIR       = @BINDIR@
RM           = rm -f
SHELL        = /bin/sh
#FILES        = *.xbm
TARGET       = ../src/astrotcl_bitmaps.C
srcdir	     = @srcdir@

all: $(TARGET)

# generate a C file that creates all of the bitmap files
# in this directory and installs them for Tk access by basename
$(TARGET): $(FILES) bitmaps.tcl
	itclsh@ITCL_VERSION@ bitmaps.tcl > $(TARGET)

All: 
	cd ..; $(MAKE)

# bitmaps don't have to be installed since they are now compiled in (allan)
install: 

clean:
	$(RM) *\~ "#"* core

depend:

distclean: clean
	rm -f Makefile	

man:

