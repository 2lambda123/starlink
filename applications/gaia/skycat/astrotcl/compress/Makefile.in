# Component level Makefile

SUBDIRS = src include test man

all: FORCE
	for i in $(SUBDIRS); do (cd $$i; echo "$$i:"; $(MAKE) $@) || exit 1; done

install clean depend man: FORCE
	for i in $(SUBDIRS); do (cd $$i; echo "$$i:"; $(MAKE) $@) done

distclean: clean
	rm -f Makefile */.objs

FORCE:

include @SRC_ROOT@/makefile.mk

