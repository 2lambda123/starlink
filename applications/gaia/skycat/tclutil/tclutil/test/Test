#!/bin/sh
# -*-tcl-*-
# This script creates a button for each test case...
#
# the next line restarts using a special startup script to setup the env \
exec ../demos/tclutil.sh "$0" "$@"


set n 0
foreach testfile [lsort [glob t*.tcl]] {
    if {"$testfile" != "test.tcl"} {
	incr n
	set name [string range [file rootname $testfile] 1 end]
	pack \
	    [button .b$n \
		 -text $name \
		 -command "exec ../demos/tclutil.sh $testfile -geometry +300+300 &"] \
	    -side top -fill x
    }
}
