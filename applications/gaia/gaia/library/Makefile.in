PROGRAMS     = gaia.sh gaiadisp.sh gaiaremote.sh \
               displaycat displaypolcat tabbedgaia.sh

all:

All:./built/lib/gaia/gaia
	cd ..; $(MAKE)

install-top:
	test -d $(GAIA_LIBRARY) || mkdir -p $(GAIA_LIBRARY)
	(cd $(GAIA_LIBRARY); rm -rf library; ln -s . library)
	(cd xmlbits; $(MAKE) install-top)

install-files: install-top
	@set -x; for i in $(FILES) ; do \
	    $(INSTALL_DATA) $$i $(GAIA_LIBRARY) ; \
	done
	for f in $(PROGRAMS); do \
	    $(INSTALL) $$f $(GAIA_LIBRARY) ;\
	done
	(cd xmlbits; $(MAKE) install-files)

install: install-files

clean:
	$(RM) *\~ "#"*
	(cd xmlbits; $(MAKE) clean)


index tclIndex: FORCE
	./mkIndex.tcl

depend:

distclean: clean
	rm -f Makefile

man:

FORCE:

