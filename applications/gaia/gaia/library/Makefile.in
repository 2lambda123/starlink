PROGRAMS     = gaia.sh gaiadisp.sh gaiaremote.sh adamMessageRelay
srcdir	     = @srcdir@

all:

All:./built/lib/gaia/gaia
	cd ..; $(MAKE)

install-top:
	test -d $(GAIA_LIBRARY) || mkdir -p $(GAIA_LIBRARY)
	(cd $(GAIA_LIBRARY); rm -rf library; ln -s . library)

install-files: install-top
	@set -x; for i in $(srcdir)/$(FILES) ; do \
	    $(INSTALL_DATA) $$i $(GAIA_LIBRARY) ; \
	done
	for f in $(srcdir)/$(PROGRAMS); do \
	    $(INSTALL) $$f $(GAIA_LIBRARY) ;\
	done

install: install-files

clean:
	$(RM) *\~ "#"*

index tclIndex: FORCE
	./mkIndex.tcl

depend:

distclean: clean
	rm -f Makefile

man:

FORCE:

