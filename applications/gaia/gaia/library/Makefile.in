SHELL        = /bin/sh
FILES        = \
 Batch.tcl ETable.tcl FileSelect.tcl Gaia.tcl GaiaAstTransfer.tcl \
 GaiaAstTransferTable.tcl GaiaContour.tcl GaiaConvertTable.tcl \
