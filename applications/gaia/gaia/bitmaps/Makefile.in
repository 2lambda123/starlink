# ------------------------------------------------------------------------
# 	Makefile for RTD bitmaps directory
# ------------------------------------------------------------------------

INSTALL      = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
RTD_DIR      = @RTD_DIR@
BINDIR       = @BINDIR@
RM           = rm -f
SHELL        = /bin/sh
FILES        = *.xbm
TARGET       = ../src/bitmaps.C
srcdir	     = @srcdir@

all: $(TARGET)

# generate a C file that creates all of the bitmap files
# in this directory and installs them for Tk access by basename
$(TARGET): $(FILES)
	tclsh7.4 bitmaps.tcl > $(TARGET)

All: 
	cd ..; $(MAKE)

install-top:
	@if test -d $(RTD_DIR)/bitmaps ; then \
	    : ; \
	else \
	    mkdir $(RTD_DIR)/bitmaps ; \
	fi

install-files: install-top
	@set -x; for i in $(srcdir)/$(FILES) ; do \
	    $(INSTALL_DATA) $$i $(RTD_DIR)/bitmaps ; \
	done 

# bitmaps don't have to be installed since they are now compiled in (allan)
#install: install-files
install: 

clean:
	$(RM) *\~ "#"* core

depend:

distclean: clean
	rm -f Makefile	

man:

