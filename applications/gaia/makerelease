#!/bin/csh -f

#  Make release of GAIA from CVS checkout.

if ( ! -e gaia.news ) then
   echo "No gaia.news file. Is this a release directory?"
   exit 1
endif

if ( -d gaia ) then 
  mkdir gaia/mktclapp/bin
  mv gaia/gaia.htx .
  tar cvf gaia.tar gaia
  tar cvf gaia.htx_tar gaia.htx
  mv gaia.htx gaia
else
  echo "No gaia directory!"
  exit 1
endif

if ( -d skycat ) then 
  tar cvf gaia_skycat.tar skycat
else
  echo "No skycat directory!"
  exit 1
endif

if ( -d iraf ) then 
  ( cd iraf; tar cvf ../gaia_iraf.tar * )
else 
  echo "No iraf directory!"
  exit 1
endif

if ( -d tcl ) then 
  ( tar cvf gaia_tcl.tar tcl )
else 
  echo "No tcl directory!"
  exit 1
endif

if ( -d demodata ) then 
  ( cd demodata; tar cvf ../demodata.tar * )
else 
  echo "No demodata directory!"
  exit 1
endif


tar cvf gaia_source.tar gaia.csh gaiadisp.csh tabbedgaia.csh .gaFilters

./mk check
exit
