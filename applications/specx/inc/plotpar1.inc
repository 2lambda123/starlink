C---------------------------------------------------------------------
C
C                         PLOTPAR1.INC
C                         ------------
C
C     Definition of variables for single-spectrum plots on graphics terminals.
C     This version used for interactive graphics on terminal, and is not saved.
C     Contains 12 integer*2 words

      REAL        XLEN1, YLEN1      ! X & Y axis lengths (mm)
      REAL        CHARHT1           ! Character height (mm)
      INTEGER     ITICKX1, ITICKY1  ! Flags if intermediate ticks required (X,Y)
      REAL        XST1, XEND1       ! Start and end values of X-axis
      INTEGER     NINTSX1, NINTSY1  ! Number of intervals - x & y axes
      REAL        YST1, YEND1       ! Start and end values of Y-axis
      INTEGER     IDEV1             ! Plot device number

      COMMON /PLOTPAR1/ XLEN1, YLEN1, CHARHT1, ITICKX1, ITICKY1,
     &                  XST1, XEND1, NINTSX1, YST1, YEND1, 
     &                  NINTSY1, IDEV1
      SAVE   /PLOTPAR1/

C---------------------------------------------------------------------
