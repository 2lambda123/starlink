      INTEGER   NCUBE
      INTEGER   NINDEX

      LOGICAL   CUBE_IN_MEMORY
      INTEGER   CUBE_ADDRESS
      INTEGER   INDEX_ADDRESS

      LOGICAL   NEW_CUBE_LOADED
      INTEGER   CURRENT_CUBE_ADDRESS
      INTEGER   CURRENT_INDEX_ADDRESS

      INTEGER   INVINDEX_ADDRESS

      COMMON /CUBE/ NCUBE, NINDEX,
     &              CUBE_IN_MEMORY, CUBE_ADDRESS, INDEX_ADDRESS,
     &              NEW_CUBE_LOADED, CURRENT_CUBE_ADDRESS,
     &              CURRENT_INDEX_ADDRESS, INVINDEX_ADDRESS
      SAVE   /CUBE/
