      helpkey  '*'
   endparameter

   parameter OUTPUT              # Output frame
      position 3
      type     'NDF'
      access   'WRITE'
      vpath    'PROMPT '
      ppath    'CURRENT'
      prompt   'Output frame'
      helpkey  '*'
   endparameter

   parameter GSIGM
      position 4
      keyword  'GSIGM'
      type     '_REAL'
      vpath    'PROMPT'
      ppath    'GLOBAL,CURRENT'
      association '<-GLOBAL.PISA_GSIGM'
      prompt   'Gaussian sigma (pixels)'
      helpkey  '*'
