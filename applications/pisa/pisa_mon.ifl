      ppath       'CURRENT'
      prompt      'Input NDF '
      helpkey     '*'
   endparameter
  
   parameter      dranGE 
      position    2
      type        _REAL
      vpath       'PROMPT'
      ppath       'DYNAMIC,CURRENT'
      prompt      'Data range'
      helpkey     '*'
   endparameter

   parameter      DEVICE         # Graphics device
      ptype       'DEVICE'
      position    3
