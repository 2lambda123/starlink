          }

         parameter inner {
            position 7
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 1.3
            prompt {Inner annular radius }
            helpkey *
          }

         parameter outer {
            position 8
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 2.1
            prompt {Outer annular radius }
            helpkey *
          }

         parameter np {
            position 9
            type _INTEGER
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 50
            helpkey *
          }

         parameter range {
            position 10
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 100.0
            helpkey *
          }

         parameter device {
            position 11
            ptype DEVICE
            vpath PROMPT DEFAULT
            ppath CURRENT DEFAULT
            default xwindows
            prompt {Display device }
            helpkey *
          }

      }

# $Id$
   }

   command photomhelp {
      obey { $PHOTOM_DIR/photomhelp }
   }

   icl { defhelp photom $PHOTOM_HELP 0 }

   display {

     PHOTOM applications are now available -- (Version @VERSION@)

     Support is available by emailing photom@star.rl.ac.uk
           Type photomhelp for help or consult SUN/45

   }

}
