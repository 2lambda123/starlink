
# Note that photomhelp is not included in this. It is a separate
# monolith in the help/ subdir

package photom {
   version @VERSION@
   prefix pht

   executable photom_mon {
      action photom {

         helplib {$PHOTOM_HELP}

         parameter in {
            position 1
            type NDF
            vpath PROMPT
            ppath GLOBAL CURRENT
            association <->GLOBAL.DATA_ARRAY
            prompt {NDF containing input image}
            helpkey *
          }

         parameter resfile {
            position 2
            type FILENAME
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default photom.dat
            prompt {File for results}
            helpkey *
          }

         parameter semim {
            position 3
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 5.0
            prompt {Semi-major axis (in pixels)}
            helpkey *
          }

         parameter eccen {
            position 4
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {Eccentricity}
            helpkey *
          }

         parameter angle {
            position 5
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {Orientation (degrees)}
            helpkey *
          }

         parameter centro {
            position 6
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default TRUE
            helpkey *
          }

         parameter concen {
            position 7
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default TRUE
            helpkey *
          }

         parameter posfile {
            position 8
            type FILENAME
            vpath PROMPT
            ppath CURRENT
            prompt {File of object positions}
            helpkey *
          }

         parameter command {
            position 9
            type _CHAR
            vpath PROMPT
            ppath DEFAULT
            prompt {PHOTOM}
            default Values
            helpkey *
          }

         parameter padu {
            position 10
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 1.0
            prompt {Photons per ADU}
            helpkey *
          }

         parameter skymag {
            position 11
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 50.0
            prompt {Magnitude of sky}
            helpkey *
          }

         parameter skyest {
            position 12
            type _INTEGER
            range 1 4
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 3
            prompt {Sky estimator ( 1=mean, 2=mean2sig, 3=mode, 4=input )}
            helpkey *
          }

         parameter sky {
            position 13
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {User supplied value of sky}
            helpkey *
          }

         parameter skysig {
            position 14
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {User supplied value of sky variance}
            helpkey *
          }

         parameter photon {
            position 15
            type _INTEGER
            range 1 2
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 2
            prompt {Error estimator (1=photons, 2=sky, 3=variance, 4=gaussian)}
            helpkey *
          }

         parameter biasle {
            position 16
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {Bias level ( data units )}
            helpkey *
          }

         parameter sature {
            position 17
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.17E39
            prompt {Saturation level ( data units )}
            helpkey *
          }

         parameter inner {
            position 18
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 1.3
            prompt {Inner annular radius}
            helpkey *
          }

         parameter outer {
            position 19
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 2.1
            prompt {Outer annular radius}
            helpkey *
          }

         parameter device {
            position 20
            ptype DEVICE
            association <-GLOBAL.GRAPHICS_DEVICE
            vpath PROMPT
            ppath GLOBAL CURRENT DEFAULT
            default xwindows
            prompt {Display device}
            helpkey *
          }

         parameter search {
            position 21
            type _INTEGER
            vpath CURRENT DEFAULT NOPROMPT
            default 9
            prompt {Size of search box}
            helpkey *
          }

         parameter maxiter {
            position 22
            type _INTEGER
            vpath CURRENT DEFAULT NOPROMPT
            default 9
            prompt {Maximum number of iterations}
            helpkey *
          }

         parameter positive {
            position 23
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default TRUE
            prompt {Image features positive}
            helpkey *
          }

         parameter maxshift {
            position 24
            type _REAL
            vpath CURRENT DEFAULT NOPROMPT
            default 5.0
            prompt {Maximum shift between guess and output}
            helpkey *
          }

         parameter toler {
            position 25
            type _REAL
            vpath CURRENT DEFAULT NOPROMPT
            default 0.05
            prompt {Accuracy required}
            helpkey *
          }

         parameter etime {
            position 26
            type LITERAL
            vpath DEFAULT NOPROMPT
            default !
            helpkey *
            prompt {Expose time expression}
          }

         parameter usemask {
            position 27
            type _LOGICAL
            vpath DEFAULT NOPROMPT
            default FALSE
            helpkey *
          }

         parameter maskfile {
            position 28
            type FILENAME
            vpath PROMPT
            ppath CURRENT
            prompt {File of mask positions}
            helpkey *
          }

         parameter maskrad {
            position 29
            type _REAL
            vpath PROMPT
            ppath CURRENT
            prompt {Mask radius}
            helpkey *
          }

         parameter usemags {
            position 30
            type _LOGICAL
            vpath DEFAULT
            ppath DEFAULT
            default TRUE
            prompt {Output values as magnitudes}
            helpkey *
          }

         parameter exsource {
            position 31
            type _CHAR
            vpath DEFAULT NOPROMPT
            default HDS
            ppath DEFAULT
            helpkey *
            prompt {Source of exposure time}
          }
   
         parameter optima {
            position 32
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default FALSE
            helpkey *
          }

         parameter clip {
            position 33
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 5.0
            prompt {Clipping radius for weight map}
            helpkey *
          }

         parameter see {
            position 34
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 3.0
            prompt {Approx seeing in pixels}
            helpkey *
          }
    
      }
      action autophotom {

         helplib {$PHOTOM_HELP}

         parameter in {
            position 1
            type NDF
            vpath PROMPT
            ppath GLOBAL CURRENT
            association <->GLOBAL.DATA_ARRAY
            prompt {NDF containing input image}
            helpkey *
          }

         parameter infile {
            position 2
            type LITERAL
            vpath PROMPT
            ppath CURRENT DEFAULT
            default photom.dat
            prompt {Input aperture description file}
            helpkey *
          }

         parameter outfile {
            position 3
            type LITERAL
            vpath PROMPT
            ppath CURRENT DEFAULT
            default newphotom.dat
            prompt {Output aperture description file}
            helpkey *
          }

         parameter centro {
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default TRUE
            prompt {Centroid input positions}
            helpkey *
          }

         parameter usemags {
            type _LOGICAL
            prompt {Convert output into magnitudes}
            vpath DEFAULT NOPROMPT
            ppath DEFAULT
            default TRUE
            helpkey *
          }

         parameter padu {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 1.0
            prompt {Photons per ADU}
            helpkey *
          }

         parameter skymag {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 50.0
            prompt {Magnitude of sky}
            helpkey *
          }

         parameter skyest {
            type _INTEGER
            range 1 4
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 3
            prompt {Sky estimator ( 1=mean, 2=mean2sig, 3=mode, 4=input )}
            helpkey *
          }

         parameter sky {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {User supplied value of sky}
            helpkey *
          }

         parameter skysig {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {User supplied value of sky variance}
            helpkey *
          }

         parameter photon {
            type _INTEGER
            range 1 4
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 2
            prompt {Error estimator (1=photons, 2=sky, 3=variance, 4=gaussian)}
            helpkey *
          }

         parameter biasle {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.0
            prompt {Bias level ( data units )}
            helpkey *
          }

         parameter sature {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 0.17E39
            prompt {Saturation level ( data units )}
            helpkey *
          }

         parameter search {
            type _INTEGER
            vpath CURRENT DEFAULT NOPROMPT
            default 9
            prompt {Size of search box}
            helpkey *
          }

         parameter maxiter {
            type _INTEGER
            vpath CURRENT DEFAULT NOPROMPT
            default 9
            prompt {Maximum number of iterations}
            helpkey *
          }

         parameter positive {
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default TRUE
            prompt {Image features positive}
            helpkey *
          }

         parameter maxshift {
            type _REAL
            vpath CURRENT DEFAULT NOPROMPT
            default 5.0
            prompt {Maximum shift between guess and output}
            helpkey *
          }

         parameter toler {
            type _REAL
            vpath CURRENT DEFAULT NOPROMPT
            default 0.05
            prompt {Accuracy required}
            helpkey *
          }

         parameter etime {
            type LITERAL
            vpath DEFAULT NOPROMPT
            default !
            helpkey *
            prompt {Expose time expression}
          }

         parameter usemask {
            type _LOGICAL
            vpath DEFAULT NOPROMPT
            default FALSE
            helpkey *
          }

         parameter mask {
            type LITERAL
            vpath PROMPT
            ppath CURRENT
            prompt {File of mask positions}
            helpkey *
          }

         parameter fixorigin {
            type _LOGICAL
            vpath DEFAULT NOPROMPT
            ppath DEFAULT
            default FALSE
            help "Fix origin to zero for GAIA apertures"
          }

         parameter exsource {
            type _CHAR
            vpath DEFAULT NOPROMPT
            default HDS
            ppath DEFAULT
            helpkey *
            prompt {Source of exposure time}
          }

         parameter fixann {
            type _LOGICAL
            vpath DEFAULT NOPROMPT
            default FALSE
            prompt {Define annuli using fixed radii}
            helpkey *
          }
   
         parameter optima {
            type _LOGICAL
            vpath CURRENT DEFAULT NOPROMPT
            default FALSE
            helpkey *
          }

         parameter clip {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 5.0
            prompt {Clipping radius for weight map}
            helpkey *
          }

         parameter see {
            type _REAL
            vpath CURRENT DEFAULT PROMPT
            ppath DYNAMIC DEFAULT
            default 3.0
            prompt {Approx seeing in pixels}
            helpkey *
          }
   
      }
      action photgrey {
   
         helplib {$PHOTOM_HELP}

         parameter in {
            position 1
            type NDF
            vpath PROMPT
            ppath GLOBAL CURRENT
            association <->GLOBAL.DATA_ARRAY
            prompt {Input image}
            helpkey *
          }

         parameter xstart {
            position 2
            type _INTEGER
            vpath PROMPT
            prompt {First X index of subarray }
            helpkey *
          }

         parameter xend {
            position 3
            type _INTEGER
            vpath PROMPT
            prompt {Second X index of subarray }
            helpkey *
          }

         parameter ystart {
            position 4
            type _INTEGER
            vpath PROMPT
            prompt {First Y index of subarray }
            helpkey *
          }

         parameter yend {
            position 5
            type _INTEGER
            vpath PROMPT
            prompt {Second Y index of subarray }
            helpkey *
          }

         parameter low {
            position 6
            type _REAL
            vpath PROMPT
            prompt {Lowest data value to plot }
            helpkey *
          }

         parameter high {
            position 7
            type _REAL
            vpath PROMPT
            prompt {Highest data value to plot }
            helpkey *
          }

         parameter device {
            position 8
            ptype DEVICE
            association <-GLOBAL.GRAPHICS_DEVICE
            vpath PROMPT
            ppath GLOBAL CURRENT DEFAULT
            default xwindows
            prompt {Display device}
            helpkey *
          }

      }
# $Id$
      action photopt {

         helplib {$PHOTOM_HELP}

         parameter in {
            position 1
            type NDF
            vpath PROMPT
            ppath CURRENT
            prompt {NDF containing input image}
            helpkey *
          }

         parameter semim {
            position 2
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 5.0
            prompt {Semi-major axis }
            helpkey *
          }

         parameter eccen {
            position 3
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 0.0
            prompt {Eccentricity }
            helpkey *
          }

         parameter angle {
            position 4
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 0.0
            prompt {Orientation }
            helpkey *
          }

         parameter padu {
            position 5
            type _REAL
            vpath DEFAULT PROMPT
            ppath DEFAULT
            default 1.0
            prompt {Photons per ADU }
