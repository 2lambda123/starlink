\NewConfigure{sstusage}{4}
\renewcommand{\sstusage}[1]{\a:sstusage Usage: \b:sstusage
  \c:sstusage #1 \d:sstusage}
\Configure{sstusage}{\EndP\HCode{<h4 class="ssth4">}}{\Tg</h4>}{%
\Tg<div class="sstusage">}{\Tg</div>}

