interface POLEXT

   helplib 'POLPACK_HELP:'

   parameter ANGROT
      type     _REAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new ANGROT value'
      helpkey  '*'
   endparameter

   parameter ANLANG
      type     _REAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new ANLANG value'
      helpkey  '*'
   endparameter

   parameter EPS
      type     _REAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new EPS value'
      helpkey  '*'
   endparameter

   parameter FILTER
      type     LITERAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new FILTER value'
      helpkey  '*'
   endparameter

   parameter IMGID
      type     LITERAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'New IMGID value(s)'
      helpkey  '*'
   endparameter

   parameter IN                  # List of Input NDFs
      position 1
      type     LITERAL
      access   READ
      vpath    'PROMPT,CURRENT,GLOBAL'
      ppath    'CURRENT,GLOBAL'
      association '<->GLOBAL.DATA_ARRAY'
      prompt   'Input images'
      helpkey  '*'
   endparameter

   parameter NAMELIST
      type     LITERAL
      access   READ
      vpath    'DEFAULT'
      ppath    'DEFAULT'
      default  !
      prompt   'File to contain a list of the NDFs'
      helpkey  '*'
   endparameter

   parameter QUIET
      type     _LOGICAL
      access   READ
      vpath    'DEFAULT'
      ppath    'DEFAULT'
      default  F
      prompt   'Should all screen output be suppressed?'
      helpkey  '*'
   endparameter

   parameter RAY
      type     LITERAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new RAY value'
      helpkey  '*'
   endparameter

   parameter T
      type     _REAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new T value'
      helpkey  '*'
   endparameter

   parameter WPLATE
      type     LITERAL
      access   READ
      ppath    'DEFAULT'
      vpath    'DEFAULT'
      default  !
      prompt   'A new WPLATE value'
      helpkey  '*'
   endparameter

endinterface
