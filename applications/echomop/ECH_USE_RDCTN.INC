*  This include file contains variables which are used to hold
*  the current status of the reduction and data file mappings.
*  When a subroutine requests access to data stored in data or
*  reduction files, a record is kept in the COMMON defined
*  here.

      INTEGER MAX_DIMENSIONS
      PARAMETER ( MAX_DIMENSIONS = 4 )

      LOGICAL RDCTN_FILE_OPEN
      LOGICAL ECHARC_FILE_OPEN
      LOGICAL RESULT_FILE_OPEN
      LOGICAL CLONE_FILE_OPEN
      LOGICAL FTRDB_FILE_OPEN
      LOGICAL DATA_FILES_OPEN
      INTEGER MAX_ACCESS_COUNT
      INTEGER MAX_WS_ACCESS_COUNT
      INTEGER MAX_OBJECTS
      INTEGER MAX_REG_VARS
      INTEGER NUM_REG_VARS
      INTEGER ACCESS_COUNT
      INTEGER WS_ACCESS_COUNT
      INTEGER MAX_DYNAMIC_INDICIES

      PARAMETER ( MAX_ACCESS_COUNT = 300 )
      PARAMETER ( MAX_WS_ACCESS_COUNT = 32 )
      PARAMETER ( MAX_OBJECTS = 200 )
      PARAMETER ( MAX_REG_VARS = 50 )
      PARAMETER ( MAX_DYNAMIC_INDICIES = 50 )

      INTEGER OBJECT_ADDRESS( MAX_ACCESS_COUNT )
      INTEGER OBJECT_INDEX( MAX_ACCESS_COUNT )
      BYTE OBJECT_SEND( MAX_ACCESS_COUNT )
      INTEGER OBJECT_QADDRESS( MAX_ACCESS_COUNT )
      INTEGER OBJECT_EADDRESS( MAX_ACCESS_COUNT )
      INTEGER OBJECT_SIZE( MAX_ACCESS_COUNT )
      INTEGER OBJECT_HANDLE( MAX_ACCESS_COUNT )
      INTEGER OBJECT_QHANDLE( MAX_ACCESS_COUNT )
      INTEGER OBJECT_EHANDLE( MAX_ACCESS_COUNT )
      INTEGER OBJECT_STATICS( MAX_ACCESS_COUNT )

      CHARACTER*80 OBJECT_NAME( MAX_ACCESS_COUNT )
      CHARACTER*6 OBJECT_TYPE( MAX_ACCESS_COUNT )
      CHARACTER*32 DYNAMIC_INDEX_NAME( MAX_DYNAMIC_INDICIES )
      CHARACTER*80 WS_OBJECT_NAME( MAX_WS_ACCESS_COUNT )
      CHARACTER*6 WS_OBJECT_TYPE( MAX_WS_ACCESS_COUNT )
      CHARACTER*132 OBJECT_PATH( MAX_OBJECTS )
      CHARACTER*80 OBJECT_REF_NAME( MAX_OBJECTS )
      CHARACTER*80 OBJ_DIMEN_VARS( MAX_REG_VARS )
      CHARACTER*80 DIMEN_INDEX( MAX_DIMENSIONS )
      CHARACTER*255 RDCTN_FILE_NAME

*  "cludge" by MJC 17-APR-1996 - so ech_plotter gets title.
      CHARACTER*255 GRAPH_TITLE
      CHARACTER*255 RDCTN_FILE_MAIN
      CHARACTER*255 RDCTN_FILE_ECHARC
      CHARACTER*255 RDCTN_FILE_RDUCD
      CHARACTER*255 RDCTN_FILE_OUTFLAT
      CHARACTER*255 RDCTN_FILE_FTRDB
      CHARACTER*255 RDCTN_FILE_CLONE

      INTEGER DYNAMIC_INDEX_VALUE( MAX_DYNAMIC_INDICIES )
      INTEGER DYNAMIC_INDICIES_USED

      LOGICAL WS_ACCESS_ACTIVE( MAX_WS_ACCESS_COUNT )
      INTEGER WS_OBJECT_ADDRESS( MAX_WS_ACCESS_COUNT )
      INTEGER WS_OBJECT_SIZE( MAX_WS_ACCESS_COUNT )

      INTEGER DIMEN_VALUE( MAX_DIMENSIONS )

      COMMON / RDCTN_FILE_ACCESS_1 /
     :       RDCTN_FILE_NAME, RDCTN_FILE_MAIN,
     :       RDCTN_FILE_ECHARC, RDCTN_FILE_RDUCD, RDCTN_FILE_OUTFLAT,
     :       RDCTN_FILE_FTRDB, RDCTN_FILE_CLONE,
     :       GRAPH_TITLE

      COMMON / RDCTN_FILE_ACCESS_2 /
     :       RDCTN_FILE_OPEN, ECHARC_FILE_OPEN,
     :       FTRDB_FILE_OPEN, RESULT_FILE_OPEN,
     :       CLONE_FILE_OPEN, DATA_FILES_OPEN,
     :       WS_ACCESS_ACTIVE, DYNAMIC_INDICIES_USED

      COMMON / RDCTN_FILE_ACCESS_3 /
     :       OBJECT_NAME, OBJECT_TYPE, WS_OBJECT_NAME,
     :       WS_OBJECT_TYPE, OBJECT_PATH, DIMEN_INDEX,
     :       OBJECT_REF_NAME, OBJ_DIMEN_VARS, DYNAMIC_INDEX_NAME

      COMMON / RDCTN_FILE_ACCESS_4 /
     :       OBJECT_SIZE, OBJECT_INDEX, OBJECT_SEND,
     :       OBJECT_HANDLE, OBJECT_QHANDLE, OBJECT_EHANDLE,
     :       OBJECT_ADDRESS, OBJECT_QADDRESS, OBJECT_EADDRESS,
     :       OBJECT_STATICS, ACCESS_COUNT, WS_ACCESS_COUNT,
     :       WS_OBJECT_SIZE, WS_OBJECT_ADDRESS,
     :       DIMEN_VALUE, NUM_REG_VARS, DYNAMIC_INDEX_VALUE
