   parameter OTITLE
      keyword  'OTITLE'
      type     '_CHAR'
      access   'WRITE'
      vpath    'DEFAULT'
      default  'Obsrap - Abcom'
      prompt   'Title for out images '
      help     'Give the title for the output image file'
   endparameter

endinterface

