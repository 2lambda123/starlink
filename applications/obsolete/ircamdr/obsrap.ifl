## APERPHOT - aperture photometry with concentric sky aperture

interface APERPHOT

   program 'APERPHOT'

   parameter   INPIC
      position 1
      keyword  'INPIC'
      type     'IMAGE'
      access   'READ'
      vpath    'PROMPT'
      prompt   'Image to be analysed '
      default  JUNK
      help     'Name of data structure containing the image to be examined'
   endparameter

   parameter   DATASOURCE
      position 2
      keyword  'DATASOURCE'
      type     '_CHAR'
      vpath    'PROMPT'
      prompt   'Source of input terminal=T or file=F '
      default  'T'
      help     'prompt user for input (T) or take from file (F)'
   endparameter

   parameter   FNAME
      position 3
      keyword  'FNAME'
      type     '_CHAR'
      vpath    'PROMPT'
      prompt   'Name of input data file '
      default  'APERPHOT.DAT'
      help     'name of file with position data etc...'
   endparameter

   parameter   TERMOUT
      position 4
      keyword  'TERMOUT'
      type     '_CHAR'
      vpath    'PROMPT'
      prompt   'Output to Terminal, File or Both  '
      default  'B'
      help     'T=Terminal only, F=File only, B=Both'
   endparameter

   parameter   SKYANNUL
      position 5
      keyword  'SKYANNUL'
      type     '_LOGICAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Subtract sky in concentric annulus (Y/N) ? '
      default  Y
      help     'YES=use a sky annulus, NO=do not use sky annulus'
   endparameter

   parameter   XCEN
      position 6
      keyword  'XCEN'
      type     '_REAL'
      vpath    'PROMPT'
      prompt   'X-centre of object aperture'
      default  32
      help     'Give the x coord of the centre of the circle to be binned up'
   endparameter

   parameter   YCEN
      position 7
      keyword  'YCEN'
      type     '_REAL'
      vpath    'PROMPT'
      prompt   'Y-centre of object aperture'
      default  32
      help     'Give the y coord of the centre of the circle to be binned up'
   endparameter

   parameter   ECC
      keyword  'ECC'
      type     '_REAL'
      vpath    'PROMPT'
      prompt   'Eccentricity of object aperture/sky annulus'
      default  0.0
      help     'eccentricity goes from 0.0 (circle) to 0.9999 (line)'
   endparameter

   parameter   POSANG
      keyword  'POSANG'
      type     '_REAL'
      vpath    'PROMPT'
      prompt   'Position angle of major axis wrt N (in degrees)'
      default  0.0
      help     'Input 0-180deg, 30 is 30deg S or E-W clockwise'
   endparameter

   parameter   MAJAX1
      position 8
      keyword  'MAJAX1'
      type     '_REAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Major axis of object aperture (in arcsec)'
      default  10.0
      help     'Give major axis (in arcseconds) of the object aperture'
   endparameter

   parameter   MAJAX2
      position 9
      keyword  'MAJAX2'
      type     '_REAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Major axis of inner diameter of concentric sky aperture (arcsec)'
      default  20.0
      help     'Give major axis (in arcseconds) of the sky annulus'
   endparameter

   parameter   MAJAX3
      position 10
      keyword  'MAJAX3'
      type     '_REAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Major axis of outer diameter of concentric sky aperture (arcsec)'
      default  30.0
      help     'Give major axis (in arcseconds) of the sky annulus'
   endparameter

   parameter   SCALE
      position 11
      keyword  'SCALE'
      type     '_REAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Pixel scale (arcsec/pixel)'
      default  0.62
      help     'Give the size of the image pixels in arcseconds on the sky'
   endparameter

   parameter   USEWHAT
      keyword  'USEWHAT'
      type     '_CHAR'
      vpath    'PROMPT,DEFAULT'
      prompt   'Use MEDIAN or MEAN in sky calculation ? '
      default  'MEDIAN'
      help     'Option to estimate sky from median or mean in sky annulus'
   endparameter

   parameter   USEBAD
      keyword  'USEBAD'
      type     '_LOGICAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Use bad pixel value in calculation (Y/N) ? '
      default  Y
      help     'Option to miss out pixel with bad value in apertures'
   endparameter

   parameter   BADVAL
      keyword  'BADVAL'
      type     '_REAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Bad pixel value ? '
      default  -1.0E-20
      help     'Value of bad pixel to be missed out of calculation'
   endparameter

   parameter   AGAIN
      position 12
      keyword  'AGAIN'
      type     '_LOGICAL'
      vpath    'PROMPT,DEFAULT'
      prompt   'Another aperture in same image (Y/N) ? '
      default  Y
      help     'Option to select another paerture in same input image'
   endparameter

   parameter   RUNSORT
      keyword  'RUNSORT'
      type     '_CHAR'
      vpath    'PROMPT,DEFAULT'
      prompt   'Change aperture Major axis or Position (M/P) ? '
      default  'M'
      help     'Option to change aperture size or position'
   endparameter

   parameter   NUM1
      type    '_integer'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_NUM1'
   endparameter

   parameter   TOTAL1
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_TOTAL1'
   endparameter

   parameter   MEAN1
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_MEAN1'
   endparameter

   parameter   MED1
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_MED1'
   endparameter

   parameter   NOISE1
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_NOISE1'
   endparameter

   parameter   NUM2
      type    '_integer'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_NUM2'
   endparameter

   parameter   TOTAL2
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_TOTAL2'
   endparameter

   parameter   MEAN2
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_MEAN2'
   endparameter

   parameter   MED2
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_MED2'
   endparameter

   parameter   NOISE2
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_NOISE2'
   endparameter

   parameter  OBJSKY
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_OBJSKY'
   endparameter

   parameter  MAG
      type    '_real'
      vpath   'internal'
      association '->GLOBAL.APERPHOT_MAG'
   endparameter

endinterface

