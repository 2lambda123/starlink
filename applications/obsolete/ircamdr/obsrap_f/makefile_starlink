# Macro definitions
ALINK   = /star/bin/alink
LIB1    = -L/home/caa/clred/lib_a -lobsrap -lrapi2d -lplt2d
LIB2    = -L/home/caa/clred/lib_a -laspker -latlib -laif
LIB3    = -L/home/caa/clred/lib_a -lrapsub -lrapgen -lkersub -lkergen
NAGLIB  = -L/star/nag/nagfl15df -lnag

# Make the executable
obsrap:   
	$(ALINK) obsrap.o  $(LIB1) $(LIB2) $(LIB3) $(NAGLIB) \
	`ndf_link_adam` `fio_link_adam` `mag_link_adam`	`pgplot_link`
# removed line below to allow linking under Solaris 2.4
# also commented out psgrey line in obsrap.f
#`pgp_link_adam` 
