         vpath 'global'
         ppath 'global,dynamic,current,default'
         association '<->global.softdev'
      endparameter
  
      parameter HARDDEV
         ptype 'device'
         type 'literal'
         vpath 'global'
         ppath 'global,dynamic,current,default'
         association '<->global.harddev'
      endparameter

