*+  PSF_ASCA_CMN - Common block definition for ASCA
*-

      INTEGER			AS_NE			! # energy bands
	PARAMETER		( AS_NE = 10 )

      INTEGER			AS_NXY			! # X and Y bins
	PARAMETER		( AS_NXY = 63 )

      INTEGER			AS_NSP			! # f.o.v samples
	PARAMETER		( AS_NSP = 11 )

      INTEGER			AS_GPTR(AS_NE,AS_NSP)
      INTEGER			AS_SPTR(AS_NE,AS_NSP)
      REAL			AS_GPIX
      REAL			AS_SPIX

      LOGICAL                 AS_INIT 			! System initialised
      REAL                    AS_ENERGY(PSF_NMAX)	!
      INTEGER                 AS_PHALO(PSF_NMAX)        !
      INTEGER                 AS_PHAHI(PSF_NMAX)        ! Channel bounds
      LOGICAL                 AS_PHA_DEF(PSF_NMAX)      ! Channel bounds defined
      REAL                    AS_CHAN_SCALE(PSF_NMAX)

      CHARACTER*3	      AS_INSTR(PSF_NMAX)	! ASCA detector
      CHARACTER*200		AS_CALDB
      INTEGER			AS_CALDBL

      COMMON /PSF_ASCA_CMN/    AS_INIT, AS_ENERGY,
     :                        AS_PHALO, AS_PHAHI, AS_PHA_DEF,
     :                        AS_GPTR,AS_SPTR, AS_GPIX,
     :                        AS_SPIX, AS_CALDBL,
     :                        AS_CHAN_SCALE

      COMMON /PSF_ASCA_CMNC/   AS_INSTR, AS_CALDB
