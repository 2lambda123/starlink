      CHARACTER GCM_AMODE(IRH__MAXG)*6   ! Access mode for each group.
      LOGICAL   GCM_OUT(IRH__MAXG)       ! If true, then the group is an
                                         ! output group. Otherwise it is
                                         ! an input group.
      

      COMMON /IRG_COM1/ GCM_AMODE
      COMMON /IRG_COM2/ GCM_OUT
* $Id$
