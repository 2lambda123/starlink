#!/bin/csh

      set objfile = ccdtest_obj.dat
      set astfile = ccdtest.ast

      ccdpack

      ccdgenerate \
         nseq=3 \
         file=$objfile \
         type='.sdf' \
         pixels='[64,128]' \
         origins='[-1,-101,-69,-101,297,-1]' \
         angles='[0,0,270]' \
         reduced \
         logto=terminal \
         reset \
         accept

      astexp \
         in='"data1,data2,data3"' \
         astfile=$astfile \
         outdomain=FOCAL \
         outtitle='"Alignment on focal plane of mosaic camera"' \
         idtype=fitsid \
         fitsid=iseq \
         logto=terminal \
         accept

       rm data1.sdf data2.sdf data3.sdf
            
         
