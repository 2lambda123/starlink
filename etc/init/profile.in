# HDSTOOLS

if test -f @bindir@/hdstools/hdstools.sh; then
  hdstools () { . $HDSTOOLS_DIR/hdstools.sh; }
  hdstoolssetup () { . $HDSTOOLS_DIR/hdstools.sh; }
else
  hdstools () { @staretcdir@/notinst hdstools; }
  hdstoolssetup () { @staretcdir@/notinst hdstools; }
