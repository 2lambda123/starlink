#
#   Pongo
#

if test -f @bindir@/pongo/pongo.icl; then
   pongo () { icl $PONGO_BIN/pongo; }
else
   pongo () { @staretcdir@/notinst pongo; }
fi


# Done

export STAR_LOGIN=''
