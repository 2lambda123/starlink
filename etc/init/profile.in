#
#   Photom
#

if test -f @bindir@/photom/photom.sh; then
   photomstart () { . $PHOTOM_DIR/photom.sh; }
   photom () { . $PHOTOM_DIR/photom.sh; }
   photomsetup () { . $PHOTOM_DIR/photom.sh; }
else
